@using DMSUI.Entities.DTOs.Position
@model List<PositionListDTO>

@{
    ViewData["Title"] = "Pozisyonlar";
}

<div class="container-fluid px-3 pb-4">

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-briefcase me-2 text-primary"></i>
            Pozisyonlar
        </h4>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Pozisyon
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-2">

            <div class="table-scroll-x">
                <table class="table table-hover align-middle mb-0 small w-100">
                    <thead class="table-light text-nowrap">
                        <tr>
                            <th class="px-3">#</th>
                            <th class="px-3">Pozisyon Adı</th>
                            <th class="px-3">Açıklama</th>
                            <th class="px-3">Şirket</th>
                            <th class="px-3">Durum</th>
                            <th class="px-3">Oluşturma</th>
                            <th class="px-3 text-end">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="text-nowrap">
                        @{
                            int rowNo = 1;
                        }

                        @foreach (var pos in Model)
                        {
                            <tr>
                                <td class="px-3">@rowNo</td>

                                <td class="fw-semibold px-3">@pos.Name</td>

                                <td class="px-3">@pos.Description</td>

                                <td class="px-3">
                                    @(pos.CompanyName ?? "-")
                                </td>

                                <td class="px-3">
                                    <span class="badge @(pos.IsActive == true ? "bg-success" : "bg-danger")">
                                        @(pos.IsActive == true ? "Aktif" : "Pasif")
                                    </span>
                                </td>

                                <td class="px-3">
                                    @(pos.CreatedAt?.ToString("dd.MM.yyyy") ?? "-")
                                </td>

                                <td class="px-3 text-end">
                                    <div class="btn-group btn-group-sm shadow-sm">

                                        <a asp-action="Edit"
                                           asp-route-id="@pos.Id"
                                           class="btn btn-light border">
                                            <i class="bi bi-pencil-square text-primary"></i>
                                        </a>

                                        <button onclick="deletePosition(@pos.Id)"
                                                class="btn btn-light border">
                                            <i class="bi bi-trash text-danger"></i>
                                        </button>

                                    </div>
                                </td>
                            </tr>
                            rowNo++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script>
        async function deletePosition(id) {
            if (!confirm("Pozisyon silinsin mi?")) return;

            const response = await fetch('/Position/Delete', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `id=${id}`
            });

            if (response.ok) location.reload();
            else alert("Silme işlemi başarısız!");
        }
    </script>
}

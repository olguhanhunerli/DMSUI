@using DMSUI.Entities.DTOs.Category
@model List<CategoryTreeDTO>

@{
    ViewData["Title"] = "Kategori Seç";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">

        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-folder-plus"></i> Doküman için Kategori Seç
            </h5>
        </div>

        <div class="card-body p-0">

            <div class="alert alert-info m-3">
                Yeni doküman oluşturmak için lütfen bir kategori seçiniz.
            </div>

            <div class="category-scroll-container px-3 pb-3">

                <div class="accordion">

                    @foreach (var cat in Model)
                    {
                        @await Html.PartialAsync(
                                 "~/Views/Shared/Components/_CategoryComponentPartial/_CategoryNode_Create.cshtml",
                                 cat)
                    }

                </div>

            </div>

        </div>
    </div>
</div>

@model DMSUI.ViewModels.Document.DocumentCreatePreviewViewModel

@{
    ViewData["Title"] = "Yeni Doküman Oluştur";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="CategoryId" />
    <input type="hidden" asp-for="PreparedByUserId" />
    <input type="hidden" asp-for="PreparedAt" />
    <input type="hidden" asp-for="DocumentCode" />

    <div class="container-fluid mt-4">

        <div class="card shadow-sm border-0">

            <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    <i class="bi bi-file-earmark-plus"></i> Yeni Doküman Oluştur
                </h5>
            </div>

            <div class="card-body p-0">

                <ul class="nav nav-tabs px-3 pt-3" id="documentCreateTabs" role="tablist">

                    <li class="nav-item">
                        <button type="button" class="nav-link active" data-bs-toggle="tab" data-bs-target="#preview">
                            <i class="bi bi-eye"></i> Doküman Bilgileri
                        </button>
                    </li>

                    <li class="nav-item">
                        <button type="button" class="nav-link" data-bs-toggle="tab" data-bs-target="#content">
                            <i class="bi bi-shield-check"></i> Onay Akışı
                        </button>
                    </li>
                    <li class="nav-item">
                        <button type="button" class="nav-link" data-bs-toggle="tab" data-bs-target="#departmens">
                            <i class="bi bi-shield-check"></i> Görüntüle
                        </button>
                    </li>
                    <li class="nav-item">
                        <button type="button" class="nav-link" data-bs-toggle="tab" data-bs-target="#attachments">
                            <i class="bi bi-folder-plus"></i> Ek Dosyalar
                        </button>
                    </li>
                    <li class="nav-item">
                        <button type="button" class="nav-link" data-bs-toggle="tab" data-bs-target="#files">
                            <i class="bi bi-paperclip"></i> Dosyalar
                        </button>
                    </li>

                </ul>

                <div class="tab-content p-4">

                    <div class="tab-pane fade show active" id="preview">

                        <div class="row g-3">

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Klasör Adı</label>
                                <input class="form-control" value="@Model.CategoryName" readonly />
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Doküman Kodu</label>
                                <input class="form-control" value="@Model.DocumentCode" readonly />
                                @if (Model.IsCodeValid)
                                {
                                    <small class="text-success">Kod geçerli</small>
                                }
                                else
                                {
                                    <small class="text-danger">Kod geçersiz</small>
                                }
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Doküman Adı (TR)</label>
                                <input asp-for="TitleTr" class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-semibold">Revizyon No</label>
                                <input asp-for="RevisionNumber" class="form-control" readonly />
                            </div>
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Versiyon Notu</label>

                                <textarea asp-for="VersionNote" class="form-control"></textarea>

                                <small class="text-muted">
                                    Örn: İlk yayın, revizyon açıklaması, güncellenen alanlar vb.
                                </small>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Hazırlayan</label>
                                <input class="form-control" value="@Model.PreparedByUserName" readonly />
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Hazırlanma Tarihi</label>
                                <input class="form-control"
                                       value="@Model.PreparedAt.ToString("dd.MM.yyyy HH:mm")"
                                       readonly />
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">İlgili Bölüm</label>
                                <select asp-for="DepartmentId"
                                        asp-items="Model.DepartmentList"
                                        class="form-select">
                                    <option value="">-- Departman Seçin --</option>
                                </select>
                            </div>

                        </div>

                        <hr class="my-4" />
                    </div>

                    <div class="tab-pane fade" id="content">

                        <div class="alert alert-warning border mb-3">
                            <i class="bi bi-shield-check"></i>
                            Doküman için onay akışını tanımlayın.
                        </div>

                        <table class="table table-bordered table-sm align-middle">

                            <thead class="table-light text-center">
                                <tr>
                                    <th>Seç</th>
                                    <th>#</th>
                                    <th>Pozisyon</th>
                                    <th>Personel</th>
                                    <th>Seviye</th>
                                </tr>
                            </thead>

                            <tbody>
                                @for (int i = 0; i < Model.ApprovalList.Count; i++)
                                {
                                    <tr class="text-center">

                                        <td>
                                            <input type="checkbox"
                                                   asp-for="ApprovalList[@i].IsSelected"
                                                   class="form-check-input" />
                                        </td>

                                        <td>@(i + 1)</td>

                                        <td>@Model.ApprovalList[i].PositionName</td>

                                        <td>@Model.ApprovalList[i].UserName</td>

                                        <td>
                                            <input asp-for="ApprovalList[@i].ApprovalLevel"
                                                   class="form-control form-control-sm text-center"
                                                   style="width:70px;margin:auto;"
                                                   min="1" />
                                        </td>

                                        <input type="hidden" asp-for="ApprovalList[@i].UserId" />
                                        <input type="hidden" asp-for="ApprovalList[@i].UserName" />
                                        <input type="hidden" asp-for="ApprovalList[@i].PositionName" />

                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                    <div class="tab-pane fade" id="departmens">

                        <div class="alert alert-info border mb-3">
                            <i class="bi bi-eye"></i>
                            Bu dokümanı görüntüleyebilecek departman, rol ve kullanıcıları seçiniz.
                        </div>

                        <h6 class="fw-semibold mb-2">
                            <i class="bi bi-diagram-3"></i> Departmanlar
                        </h6>

                        <div class="row mb-4">
                            @for (int i = 0; i < Model.DepartmentList.Count; i++)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="AllowedDepartmentIds"
                                               value="@Model.DepartmentList[i].Value"
                                               id="dep_@Model.DepartmentList[i].Value" checked />

                                        <label class="form-check-label"
                                               for="dep_@Model.DepartmentList[i].Value">
                                            @Model.DepartmentList[i].Text
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr />

                        <h6 class="fw-semibold mb-2">
                            <i class="bi bi-shield-lock"></i> Roller
                        </h6>

                        <div class="row mb-4">
                            @for (int i = 0; i < Model.RoleList.Count; i++)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="AllowedRoleIds"
                                               value="@Model.RoleList[i].Value"
                                               id="role_@Model.RoleList[i].Value" checked/>

                                        <label class="form-check-label"
                                               for="role_@Model.RoleList[i].Value">
                                            @Model.RoleList[i].Text
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr />

                        <h6 class="fw-semibold mb-2">
                            <i class="bi bi-person-check"></i> Kullanıcılar
                        </h6>

                        <div class="row">
                            @for (int i = 0; i < Model.UserList.Count; i++)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="AllowedUserIds"
                                               value="@Model.UserList[i].Value"
                                               id="user_@Model.UserList[i].Value"  checked/>

                                        <label class="form-check-label"
                                               for="user_@Model.UserList[i].Value">
                                            @Model.UserList[i].Text
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>

                    <div class="tab-pane fade" id="attachments">

                        <div class="alert alert-info border mb-3">
                            <i class="bi bi-paperclip"></i>
                            Bu alandan dokümana ek dosyalar yükleyebilirsiniz.
                        </div>

                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Ek Dosyalar</label>

                                <input type="file"
                                       class="form-control"
                                       name="AttachmentFiles"
                                       multiple
                                       accept=".pdf,.doc,.docx,.xlsx,.png,.jpg" />

                                <small class="text-muted">
                                    Aynı dokümana birden fazla dosya ekleyebilirsiniz.
                                </small>
                            </div>

                            <div class="col-md-6">
                                <div class="alert alert-light border mt-4">
                                    <i class="bi bi-info-circle"></i>
                                    Bu dosyalar **doküman oluşturulduktan sonra**
                                    ayrı bir istekle sisteme kaydedilecektir.
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="tab-pane fade" id="files">

                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    Doküman Dosyası Yükle
                                </label>

                                <input type="file"
                                       class="form-control"
                                       name="DocumentFile"
                                       accept=".pdf,.doc,.docx,.xlsx,.png,.jpg" />

                                <small class="text-muted">
                                    Dosya adı <b>@Model.DocumentCode</b> ile başlamalıdır.
                                </small>
                            </div>

                            <div class="col-md-6">
                                <div class="alert alert-light border mt-4">
                                    <i class="bi bi-info-circle"></i>
                                    Örnek:
                                    <ul class="mb-0">
                                        <li>@(Model.DocumentCode).pdf</li>
                                        <li>@($"{Model.DocumentCode}_Example.docx")</li>
                                        <li>@($"{Model.DocumentCode}_Example.pdf")</li>
                                    </ul>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <div class="card-footer d-flex justify-content-end gap-2">

                <a asp-action="SelectCategory" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Kaydet
                </button>

            </div>

        </div>

    </div>

</form>

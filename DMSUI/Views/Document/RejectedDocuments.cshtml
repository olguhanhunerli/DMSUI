@using DMSUI.Entities.DTOs.Common
@using DMSUI.Entities.DTOs.Document
@model PagedResultDTO<DocumentListDTO>

@{
    ViewData["Title"] = "Reddedilen Dokümanlar";
}

<div class="container-fluid px-4 mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-danger">
            <i class="bi bi-x-circle"></i> Reddedilen Dokümanlar
        </h4>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Kod</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Reddeden</th>
                        <th>Tarih</th>
                        <th>Red Sebebi</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr style="cursor:pointer"
                                onclick="location.href='@Url.Action("RejectDetail","Document",new { id = item.Id })'">

                                <td class="fw-semibold text-primary">
                                    @item.DocumentCode
                                </td>

                                <td>@item.Title</td>

                                <td>
                                    <span class="badge bg-secondary">
                                        @item.CategoryName
                                    </span>
                                </td>

                                <td>
                                    <i class="bi bi-person-x"></i>
                                    @item.RejectedByName
                                </td>

                                <td>
                                    @item.RejectedAt?.ToString("dd.MM.yyyy HH:mm")
                                </td>

                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.RejectReason))
                                    {
                                        <span class="text-danger"
                                              title="@item.RejectReason">
                                            @(item.RejectReason.Length > 30
                                                ? item.RejectReason.Substring(0, 30) + "..."
                                                : item.RejectReason)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary"
                                       href="@Url.Action("Detail","Document",new { id = item.Id })">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                Reddedilen doküman bulunamadı.
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-end">

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Rejected","Document",new { page = i })">
                            @i
                        </a>
                    </li>
                }

            </ul>
        </nav>
    }

</div>

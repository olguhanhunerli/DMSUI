@model DocumentDetailDTO
@using DMSUI.Entities.DTOs.Document
@using DMSUI.Extensions

@{
    ViewData["Title"] = "Doküman Detayı";

    var currentUserId = User.GetUserId();

    bool isCreator = Model.CreatedByUserId == currentUserId;
    bool canApprove = Model.CurrentApproverId == currentUserId;

    bool canStartRevision = Model.StatusId == 2 && isCreator;
    bool canUploadNewVersion = Model.StatusId == 2;
    bool canArchive = Model.StatusId == 2 && !Model.IsArchived;
}

<div class="container-fluid px-4 mt-4">

    <!-- HEADER -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center gap-3">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                     style="width:48px;height:48px;">
                    <i class="bi bi-file-earmark-text fs-4"></i>
                </div>

                <div>
                    <h5 class="fw-bold mb-0">@Model.DocumentCode</h5>
                    <small class="text-muted">@Model.Title</small>
                </div>
            </div>

            <div class="d-flex align-items-center gap-2">

                @if (canStartRevision)
                {
                    <button class="btn btn-outline-warning btn-sm">
                        <i class="bi bi-arrow-repeat"></i> Revizyon Başlat
                    </button>
                }

                @if (canUploadNewVersion)
                {
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-upload"></i> Yeni Versiyon
                    </button>
                }

                @if (canArchive)
                {
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-archive"></i> Arşivle
                    </button>
                }

                <span class="badge rounded-pill px-3 py-2 fs-6
                    @(Model.StatusId == 1 ? "bg-warning text-dark" :
                      Model.StatusId == 2 ? "bg-success" :
                      Model.StatusId == 3 ? "bg-danger" : "bg-secondary")">
                    @Model.Status
                </span>

            </div>

        </div>
    </div>

    <!-- CONTENT -->
    <div class="card border-0 shadow-sm">

        <div class="card-header bg-white border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-info">Bilgiler</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-pdf">PDF</button></li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-attachments">
                        Ekler
                        @if (Model.Attachments?.Any() == true)
                        {
                            <span class="badge bg-secondary ms-1">@Model.Attachments.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-approval">Onay</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-versions">Versiyonlar</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-history">Geçmiş</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-logs">Loglar</button></li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">

                <!-- INFO -->
                <div class="tab-pane fade show active" id="tab-info">
                    <div class="row g-3 mb-3">
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Doküman Tipi</small>
                                <div class="fw-semibold">@Model.DocumentType</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Versiyon</small>
                                <div class="fw-semibold">@Model.VersionNumber</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Oluşturan</small>
                                <div class="fw-semibold">@Model.CreatedByName</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Tarih</small>
                                <div class="fw-semibold">@Model.CreatedAt?.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="border rounded p-3">
                                <small class="text-muted">Versiyon Notu</small>
                                <div>@(string.IsNullOrWhiteSpace(Model.VersionNote) ? "-" : Model.VersionNote)</div>
                            </div>
                        </div>
                    </div>

                    <div class="border rounded p-3 d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-file-earmark-pdf text-danger fs-4"></i>
                            <div>
                                <div class="fw-semibold">@Model.MainFile?.OriginalFileName</div>
                                <small class="text-muted">@((Model.MainFile?.FileSize ?? 0) / 1024) KB</small>
                            </div>
                        </div>

                        <a href="@Url.Action("Pdf","Document",new{id=Model.Id})"
                           target="_blank"
                           class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i> Görüntüle
                        </a>
                    </div>
                </div>

                <!-- PDF -->
                <div class="tab-pane fade" id="tab-pdf">
                    <div class="ratio ratio-16x9 border rounded">
                        <iframe src="@Url.Action("Pdf","Document",new{id=Model.Id})"></iframe>
                    </div>
                </div>

                <!-- ATTACHMENTS -->
                <div class="tab-pane fade" id="tab-attachments">
                    @if (Model.Attachments?.Any() == true)
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Dosya</th>
                                    <th>Yükleyen</th>
                                    <th>Tarih</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var file in Model.Attachments)
                                {
                                    <tr>
                                        <td>@file.OriginalFileName</td>
                                        <td>@file.UploadedByName</td>
                                        <td>@file.UploadedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-primary"
                                               href="@Url.Action("DownloadAttachment","Document",new{id=file.Id})">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-muted">Ek bulunmuyor.</div>
                    }
                </div>

                <!-- APPROVAL -->
                <div class="tab-pane fade" id="tab-approval">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Sıra</th>
                                <th>Kullanıcı</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                          @*   @foreach (var a in Model.ApprovedBy ?? [])
                            {
                                <tr>
                                    <td>@a.ApprovalLevel</td>
                                    <td>@a.UserName</td>
                                    <td>
                                        <span class="badge
                                            @(a.IsApproved ? "bg-success" :
                                              a.IsRejected ? "bg-danger" : "bg-warning")">
                                            @(a.IsApproved ? "Onaylandı" :
                                                a.IsRejected ? "Reddedildi" : "Bekliyor")
                                        </span>
                                    </td>
                                    <td>@a.ActionAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            } *@
                        </tbody>
                    </table>

                    @if (canApprove)
                    {
                        <div class="text-end mt-3">
                            <button class="btn btn-success btn-sm">
                                <i class="bi bi-check-circle"></i> Onayla
                            </button>
                            <button class="btn btn-danger btn-sm">
                                <i class="bi bi-x-circle"></i> Reddet
                            </button>
                        </div>
                    }
                </div>

                <!-- VERSIONS -->
                <div class="tab-pane fade" id="tab-versions">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Versiyon</th>
                                <th>Not</th>
                                <th>Oluşturan</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.Versions ?? [])
                            {
                                <tr>
                                    <td>@v.VersionNumber</td>
                                    <td>@v.VersionNote</td>
                                    <td>@v.CreatedByName</td>
                                    <td>@v.CreatedAt?.ToString("dd.MM.yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- HISTORY -->
                <div class="tab-pane fade" id="tab-history">
                    <ul class="list-group list-group-flush">
                        @foreach (var h in Model.ApprovalHistories ?? [])
                        {
                            <li class="list-group-item">
                                <strong>@h.ActionType</strong> - @h.ActionByName
                                <br />
                                <small class="text-muted">@h.ActionAt?.ToString("dd.MM.yyyy HH:mm")</small>
                            </li>
                        }
                    </ul>
                </div>

                <!-- LOGS -->
                <div class="tab-pane fade" id="tab-logs">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>İşlem</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.AccessLogs ?? [])
                            {
                                <tr>
                                    <td>@log.UserName</td>
                                    <td>@log.AccessType</td>
                                    <td>@log.AccessAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

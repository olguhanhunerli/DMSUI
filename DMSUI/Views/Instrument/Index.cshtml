@using DMSUI.Entities.DTOs.Common
@using DMSUI.Entities.DTOs.Instruments
@model PagedResultDTO<InstrumentDTO>

@{
    ViewData["Title"] = "Cihazlar";

    var q = Context.Request.Query["q"].ToString();
    var status = Context.Request.Query["status"].ToString();
    var companyId = Context.Request.Query["companyId"].ToString();
    var location = Context.Request.Query["location"].ToString();
    var pageSize = Model?.PageSize ?? 10;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Cihazlar</h4>

    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Yeni Cihaz
    </a>
</div>

<form method="get" class="card shadow-sm mb-3">
    <div class="card-body py-2">
        <div class="row g-2 align-items-center">

            <div class="col-6 col-md-1">
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="25" selected="@(pageSize == 25)">25</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                </select>
            </div>

            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary btn-sm" type="submit">Ara</button>
            </div>

        </div>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr class="small">
                    <th style="width:48px;">#</th>
                    <th>Şirket</th>
                    <th>Kod</th>
                    <th>Cihaz</th>
                    <th>Marka</th>
                    <th>Model</th>
                    <th>Seri No</th>
                    <th>Aralık</th>
                    <th>Hass.</th>
                    <th>Birim</th>
                    <th>Lokasyon</th>
                    <th>Sorumlu</th>
                    <th style="width:110px;" class="text-center">Durum</th>
                    <th style="width:110px;" class="text-center">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items != null && Model.Items.Any())
                {
                    var row = (Model.Page - 1) * Model.PageSize;

                    foreach (var item in Model.Items)
                    {
                        row++;

                        <tr class="@(item.IsActive ? "" : "table-secondary")">
                            <td class="text-muted">@row</td>

                            <td>
                                <div class="fw-semibold">@item.CompanyName</div>
                            </td>

                            <td class="fw-semibold">@item.Asset_Code</td>
                            <td>@item.Name</td>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>@item.Serial_No</td>
                            <td>@item.Measurement_Range</td>
                            <td>@item.Resolution</td>
                            <td>@item.Unit</td>
                            <td>@item.Location</td>
                            <td>@item.Owner_Person</td>

                            <td class="text-center align-middle">
                                <form asp-action="ToggleActive"
                                      method="post"
                                      asp-route-id="@item.Instrument_Id"
                                      asp-route-isActive="@( !item.IsActive )"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()

                                    <button type="submit"
                                            class="btn btn-sm rounded-pill px-3
                                                   @(item.IsActive ? "btn-success" : "btn-secondary")"
                                            title="Durum Değiştir"
                                            onclick="return confirm('Durum değiştirilsin mi?');">
                                        @(item.IsActive ? "Aktif" : "Pasif")
                                    </button>
                                </form>
                            </td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-secondary"
                                       title="Detay"
                                       asp-action="Detail"
                                       asp-route-id="@item.Instrument_Id">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a class="btn btn-outline-primary"
                                       title="Düzenle"
                                       asp-action="Edit"
                                       asp-route-id="@item.Instrument_Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@item.Instrument_Id"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-outline-danger"
                                                title="Sil"
                                                onclick="return confirm('Silmek istediğine emin misin?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="14" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <div class="text-muted small">
            Toplam: <strong>@Model.TotalCount</strong>
            • Sayfa: <strong>@Model.Page</strong> / <strong>@Model.TotalPages</strong>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    @{
                        int current = Model.Page;
                        int total = Model.TotalPages;

                        int start = Math.Max(1, current - 2);
                        int end = Math.Min(total, current + 2);
                    }

                    <!-- Prev -->
                    <li class="page-item @(current == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(current - 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-status="@status"
                           asp-route-companyId="@companyId"
                           asp-route-location="@location">
                            ‹
                        </a>
                    </li>

                    <!-- First -->
                    @if (start > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="1"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-status="@status"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location">
                                1
                            </a>
                        </li>

                        @if (start > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">…</span></li>
                        }
                    }

                    <!-- Pages -->
                    @for (int i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == current ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-status="@status"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location">
                                @i
                            </a>
                        </li>
                    }

                    <!-- Last -->
                    @if (end < total)
                    {
                        @if (end < total - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">…</span></li>
                        }

                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@total"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-status="@status"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location">
                                @total
                            </a>
                        </li>
                    }

                    <!-- Next -->
                    <li class="page-item @(current == total ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(current + 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-status="@status"
                           asp-route-companyId="@companyId"
                           asp-route-location="@location">
                            ›
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

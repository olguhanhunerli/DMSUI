@using DMSUI.Entities.DTOs.Common
@using DMSUI.Entities.DTOs.Instruments
@model PagedResultDTO<InstrumentDTO>

@{
    ViewData["Title"] = "Cihazlar";
    var q = Context.Request.Query["q"].ToString();
    var status = Context.Request.Query["status"].ToString();
    var companyId = Context.Request.Query["companyId"].ToString();
    var location = Context.Request.Query["location"].ToString();
    var pageSize = Model?.PageSize ?? 10;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Cihazlar</h4>

    <a class="btn btn-primary btn-sm"
       asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Yeni Cihaz
    </a>
</div>

<!-- FILTER BAR -->
<form method="get" class="card shadow-sm mb-3">
    <div class="card-body py-2">
        <div class="row g-2 align-items-center">

            <div class="col-12 col-md-3">
                <input name="q"
                       value="@q"
                       class="form-control form-control-sm"
                       placeholder="Kod, cihaz adı, seri no..." />
            </div>

            <div class="col-6 col-md-2">
                <select name="status" class="form-select form-select-sm">
                    <option value="">Durum (Tümü)</option>
                    <option value="ACTIVE" selected="@(status=="ACTIVE")">Aktif</option>
                    <option value="QUARANTINED" selected="@(status=="QUARANTINED")">Karantina</option>
                    <option value="OUT_OF_SERVICE" selected="@(status=="OUT_OF_SERVICE")">Servis Dışı</option>
                    <option value="SCRAPPED" selected="@(status=="SCRAPPED")">Hurda</option>
                </select>
            </div>

            <div class="col-6 col-md-2">
                <input name="location"
                       value="@location"
                       class="form-control form-control-sm"
                       placeholder="Lokasyon" />
            </div>

            <div class="col-6 col-md-2">
                <!-- Company list'i ViewBag/Model ile doldurabilirsin -->
                <select name="companyId" class="form-select form-select-sm">
                    <option value="">Şirket (Tümü)</option>
                    @* Örnek: ViewBag.Companies = List<CompanyDto> *@
                    @if (ViewBag.Companies != null)
                    {
                        foreach (var c in ViewBag.Companies)
                        {
                            <option value="@c.Id" selected="@(companyId == c.Id.ToString())">@c.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-6 col-md-1">
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(pageSize==10)">10</option>
                    <option value="25" selected="@(pageSize==25)">25</option>
                    <option value="50" selected="@(pageSize==50)">50</option>
                </select>
            </div>

            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary btn-sm" type="submit">
                    Ara
                </button>
            </div>

        </div>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr class="small">
                    <th style="width: 48px;">#</th>
                    <th>Şirket</th>
                    <th>Kod</th>
                    <th>Cihaz</th>
                    <th>Marka</th>
                    <th>Model</th>
                    <th>Seri No</th>
                    <th>Aralık</th>
                    <th>Hass.</th>
                    <th>Birim</th>
                    <th>Lokasyon</th>
                    <th>Sorumlu</th>
                    <th style="width: 110px;">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items != null && Model.Items.Any())
                {
                    var row = (Model.Page - 1) * Model.PageSize;

                    foreach (var item in Model.Items)
                    {
                        row++;

                        <tr>
                            <td class="text-muted">@row</td>

                            <td>
                                <div class="fw-semibold">@item.CompanyName</div>
                            </td>

                            <td class="fw-semibold">@item.Asset_Code</td>
                            <td>@item.Name</td>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>@item.Serial_No</td>
                            <td>@item.Measurement_Range</td>
                            <td>@item.Resolution</td>
                            <td>@item.Unit</td>
                            <td>@item.Location</td>
                            <td>@item.Owner_Person</td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-secondary"
                                       title="Detay"
                                       asp-action="Details"
                                       asp-route-id="@item.Instrument_Id">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a class="btn btn-outline-primary"
                                       title="Düzenle"
                                       asp-action="Edit"
                                       asp-route-id="@item.Instrument_Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a class="btn btn-outline-danger"
                                       title="Sil"
                                       asp-action="Delete"
                                       asp-route-id="@item.Instrument_Id">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="13" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- FOOTER: pagination -->
    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <div class="text-muted small">
            Toplam: <strong>@Model.TotalCount</strong>
            • Sayfa: <strong>@Model.Page</strong> / <strong>@Model.TotalPages</strong>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    @{
                        // query string'i pagination linklerine taşıyalım
                        var baseRouteValues = new Dictionary<string, object?>
                {
                    ["q"] = q,
                    ["status"] = status,
                    ["companyId"] = companyId,
                    ["location"] = location,
                    ["pageSize"] = pageSize
                };
                    }
                </ul>
            </nav>
        }
    </div>
</div>

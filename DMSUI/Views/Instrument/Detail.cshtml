@using DMSUI.Entities.DTOs.Instruments
@model InstrumentDTO

<h3>📏 Ölçüm Aleti Detayı</h3>

<form>
    <div class="row">
        <div class="col-md-4">
            <label>Firma</label>
            <input value="@Model.CompanyName" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Demirbaş Kodu</label>
            <input asp-for="Asset_Code" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Durum</label>
            <input asp-for="Status" class="form-control" readonly />
        </div>
    </div>

    <hr />

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Cihaz Adı</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Marka</label>
            <input asp-for="Brand" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Model</label>
            <input asp-for="Model" class="form-control" readonly />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Seri No</label>
            <input asp-for="Serial_No" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Ölçüm Aralığı</label>
            <input asp-for="Measurement_Range" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Hassasiyet</label>
            <input asp-for="Resolution" class="form-control" readonly />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Birim</label>
            <input asp-for="Unit" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Lokasyon</label>
            <input asp-for="Location" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Sorumlu</label>
            <input asp-for="Owner_Person" class="form-control" readonly />
        </div>
    </div>

    <hr />

    @{
        string riskBadge = Model.Risk_Level switch
        {
            "High" => "bg-danger",
            "Medium" => "bg-warning text-dark",
            "Low" => "bg-success",
            _ => "bg-secondary"
        };
    }

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Tip</label>
            <input value="@(string.IsNullOrWhiteSpace(Model.Instrument_Type) ? "-" : Model.Instrument_Type)"
                   class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Disiplin</label>
            <input value="@(string.IsNullOrWhiteSpace(Model.Measurement_Discipline) ? "-" : Model.Measurement_Discipline)"
                   class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Risk Seviyesi</label>
            <div class="d-flex align-items-center gap-2">
                <span class="badge @riskBadge">@((string.IsNullOrWhiteSpace(Model.Risk_Level) ? "-" : Model.Risk_Level))</span>
                <input value="" class="form-control" readonly style="display:none;" />
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Kritik</label>
            <input value="@(Model.Is_Critical ? "Evet" : "Hayır")" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Belirsizlik</label>
            <input value="@(string.IsNullOrWhiteSpace(Model.Measurement_Uncertainty) ? "-" : Model.Measurement_Uncertainty)"
                   class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label>Ortam Şartı</label>
            <input value="@(Model.Environment_Required ? "Gerekli" : "Gerekli Değil")"
                   class="form-control" readonly />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <label>Ortam Notları</label>
            <input value="@(string.IsNullOrWhiteSpace(Model.Environment_Notes) ? "-" : Model.Environment_Notes)"
                   class="form-control" readonly />
        </div>
    </div>

    <hr />

    <div class="row mt-3">
        <div class="col-md-3">
            <label>Aktiflik</label>
            <input value="@(Model.IsActive ? "Aktif" : "Pasif")" class="form-control" readonly />
        </div>

        <div class="col-md-3">
            <label>Oluşturan</label>
            <input asp-for="CreatedByName" class="form-control" readonly />
        </div>

        <div class="col-md-3">
            <label>Oluşturma Tarihi</label>
            <input value="@Model.Created_At?.ToString("dd.MM.yyyy HH:mm")"
                   class="form-control" readonly />
        </div>

        <div class="col-md-3">
            <label>Güncelleme Tarihi</label>
            <input value="@Model.Updated_At?.ToString("dd.MM.yyyy HH:mm")"
                   class="form-control" readonly />
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            ↩️ Geri
        </a>

        <a asp-action="Edit"
           asp-route-id="@Model.Instrument_Id"
           class="btn btn-primary ms-2">
            ✏️ Düzenle
        </a>
    </div>
</form>

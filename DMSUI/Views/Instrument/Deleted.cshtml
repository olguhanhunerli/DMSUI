@using Microsoft.AspNetCore.Mvc.Rendering
@using DMSUI.Entities.DTOs.Common
@using DMSUI.Entities.DTOs.Instruments
@model PagedResultDTO<InstrumentDTO>

@{
    ViewData["Title"] = "Silinen Cihazlar";

    // Client-side filtre yapacağız: bunlar sadece default değerler olarak kalabilir
    var q = Context.Request.Query["q"].ToString();
    var companyId = Context.Request.Query["companyId"].ToString();
    var location = Context.Request.Query["location"].ToString();
    var instrumentType = Context.Request.Query["instrumentType"].ToString();
    var riskLevel = Context.Request.Query["riskLevel"].ToString();
    var isCritical = Context.Request.Query["isCritical"].ToString();
    var isActive = Context.Request.Query["isActive"].ToString();

    var pageSize = Model?.PageSize ?? 10;

    var companies = ViewBag.Companies as List<SelectListItem> ?? new();
    var locations = ViewBag.Locations as List<SelectListItem> ?? new();
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0 text-danger">🗑️ Silinen Cihazlar</h4>

    <a class="btn btn-secondary btn-sm" asp-action="Index">
        ↩️ Aktif Listeye Dön
    </a>
</div>

<form method="get" class="card shadow-sm mb-3" id="filterForm">
    <div class="card-body">
        <div class="row g-2 align-items-end">

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted mb-1">Arama</label>
                <input id="fQ"
                       type="text"
                       name="q"
                       value="@q"
                       class="form-control form-control-sm"
                       placeholder="Kod / Cihaz / Seri No" />
            </div>

            <div class="col-6 col-md-2">
                <label class="form-label small text-muted mb-1">Lokasyon</label>
                <select id="fLocation" name="location" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    @foreach (var l in locations)
                    {
                        <option value="@l.Value" selected="@(l.Value == location)">@l.Text</option>
                    }
                </select>
            </div>

            <div class="col-6 col-md-2">
                <label class="form-label small text-muted mb-1">Tip</label>
                <select id="fInstrumentType" name="instrumentType" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    <option value="Dimensional" selected="@(instrumentType == "Dimensional")">Dimensional</option>
                    <option value="Electrical" selected="@(instrumentType == "Electrical")">Electrical</option>
                    <option value="Pressure" selected="@(instrumentType == "Pressure")">Pressure</option>
                    <option value="Temperature" selected="@(instrumentType == "Temperature")">Temperature</option>
                    <option value="Other" selected="@(instrumentType == "Other")">Other</option>
                </select>
            </div>

            <div class="col-6 col-md-1">
                <label class="form-label small text-muted mb-1">Risk</label>
                <select id="fRiskLevel" name="riskLevel" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    <option value="Low" selected="@(riskLevel == "Low")">Low</option>
                    <option value="Medium" selected="@(riskLevel == "Medium")">Medium</option>
                    <option value="High" selected="@(riskLevel == "High")">High</option>
                </select>
            </div>

            <div class="col-6 col-md-1">
                <label class="form-label small text-muted mb-1">Kritik</label>
                <select id="fIsCritical" name="isCritical" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    <option value="true" selected="@(isCritical == "true")">Evet</option>
                    <option value="false" selected="@(isCritical == "false")">Hayır</option>
                </select>
            </div>

            <div class="col-6 col-md-1">
                <label class="form-label small text-muted mb-1">Aktif</label>
                <select id="fIsActive" name="isActive" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    <option value="true" selected="@(isActive == "true")">Aktif</option>
                    <option value="false" selected="@(isActive == "false")">Pasif</option>
                </select>
            </div>

            <div class="col-6 col-md-1">
                <label class="form-label small text-muted mb-1">Sayfa</label>
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="25" selected="@(pageSize == 25)">25</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                </select>
            </div>

            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="bi bi-search me-1"></i> Ara
                </button>
            </div>

        </div>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr class="small">
                    <th style="width:48px;">#</th>
                    <th>Şirket</th>
                    <th>Kod</th>
                    <th>Cihaz</th>
                    <th>Tip</th>
                    <th>Disiplin</th>
                    <th class="text-center">Risk</th>
                    <th class="text-center">Kritik</th>
                    <th>Seri No</th>
                    <th>Aralık</th>
                    <th>Hass.</th>
                    <th>Birim</th>
                    <th>Lokasyon</th>
                    <th>Sorumlu</th>
                    <th style="width:130px;" class="text-center">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items != null && Model.Items.Any())
                {
                    var row = (Model.Page - 1) * Model.PageSize;

                    foreach (var item in Model.Items)
                    {
                        row++;

                        string riskBadge = item.Risk_Level switch
                        {
                            "High" => "bg-danger",
                            "Medium" => "bg-warning text-dark",
                            "Low" => "bg-success",
                            _ => "bg-secondary"
                        };

                        <tr class="table-danger bg-opacity-10"
                            data-q="@($"{item.Asset_Code} {item.Name} {item.Serial_No}")"
                            data-companyid="@item.CompanyId"
                            data-location="@item.Location"
                            data-instrumenttype="@(item.Instrument_Type ?? "")"
                            data-risklevel="@(item.Risk_Level ?? "")"
                            data-iscritical="@(item.Is_Critical ? "true" : "false")"
                            data-isactive="@(item.IsActive ? "true" : "false")">

                            <td class="text-muted">@row</td>
                            <td><div class="fw-semibold">@item.CompanyName</div></td>
                            <td class="fw-semibold">@item.Asset_Code</td>
                            <td>@item.Name</td>
                            <td>@(item.Instrument_Type ?? "-")</td>
                            <td>@(item.Measurement_Discipline ?? "-")</td>

                            <td class="text-center">
                                <span class="badge @riskBadge">@((item.Risk_Level ?? "-"))</span>
                            </td>

                            <td class="text-center">
                                @if (item.Is_Critical)
                                {
                                    <span class="badge bg-danger">Kritik</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">-</span>
                                }
                            </td>

                            <td>@item.Serial_No</td>
                            <td>@item.Measurement_Range</td>
                            <td>@item.Resolution</td>
                            <td>@item.Unit</td>
                            <td>@item.Location</td>
                            <td>@item.Owner_Person</td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-secondary"
                                       title="Detay"
                                       asp-action="DetailDelete"
                                       asp-route-id="@item.Instrument_Id">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <form asp-action="RollBack"
                                          asp-route-id="@item.Instrument_Id"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-outline-success"
                                                title="Geri Al"
                                                onclick="return confirm('Geri almak istediğine emin misin?');">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="15" class="text-center text-muted py-4">Kayıt bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <div class="text-muted small">
            Toplam: <strong>@Model.TotalCount</strong>
            • Sayfa: <strong>@Model.Page</strong> / <strong>@Model.TotalPages</strong>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    @{
                        int current = Model.Page;
                        int total = Model.TotalPages;

                        int start = Math.Max(1, current - 2);
                        int end = Math.Min(total, current + 2);
                    }

                    <li class="page-item @(current == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Deleted"
                           asp-route-page="@(current - 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-companyId="@companyId"
                           asp-route-location="@location"
                           asp-route-instrumentType="@instrumentType"
                           asp-route-riskLevel="@riskLevel"
                           asp-route-isCritical="@isCritical"
                           asp-route-isActive="@isActive">
                            ‹
                        </a>
                    </li>

                    @for (int i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == current ? "active" : "")">
                            <a class="page-link"
                               asp-action="Deleted"
                               asp-route-page="@i"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location"
                               asp-route-instrumentType="@instrumentType"
                               asp-route-riskLevel="@riskLevel"
                               asp-route-isCritical="@isCritical"
                               asp-route-isActive="@isActive">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(current == total ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Deleted"
                           asp-route-page="@(current + 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-companyId="@companyId"
                           asp-route-location="@location"
                           asp-route-instrumentType="@instrumentType"
                           asp-route-riskLevel="@riskLevel"
                           asp-route-isCritical="@isCritical"
                           asp-route-isActive="@isActive">
                            ›
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<script>
    (function () {
        const form = document.getElementById('filterForm');
        if (!form) return;

        const q = document.getElementById('fQ');
        const companyId = document.getElementById('fCompanyId');
        const location = document.getElementById('fLocation');
        const instrumentType = document.getElementById('fInstrumentType');
        const riskLevel = document.getElementById('fRiskLevel');
        const isCritical = document.getElementById('fIsCritical');
        const isActive = document.getElementById('fIsActive');

        function norm(v) {
            return (v || '').toString().trim().toLowerCase();
        }

        function apply() {
            const qv = norm(q?.value);
            const civ = norm(companyId?.value);
            const lv = norm(location?.value);
            const tv = norm(instrumentType?.value);
            const rv = norm(riskLevel?.value);
            const cv = norm(isCritical?.value);
            const av = norm(isActive?.value);

            const rows = document.querySelectorAll('tbody tr[data-companyid]');

            rows.forEach(tr => {
                const trQ = norm(tr.dataset.q);
                const trCompanyId = norm(tr.dataset.companyid);
                const trLocation = norm(tr.dataset.location);
                const trType = norm(tr.dataset.instrumenttype);
                const trRisk = norm(tr.dataset.risklevel);
                const trCritical = norm(tr.dataset.iscritical);
                const trActive = norm(tr.dataset.isactive);

                const okQ = !qv || trQ.includes(qv);
                const okC = !civ || trCompanyId === civ;
                const okL = !lv || trLocation.includes(lv);
                const okT = !tv || trType === tv;
                const okR = !rv || trRisk === rv;
                const okCr = !cv || trCritical === cv;
                const okA = !av || trActive === av;

                tr.style.display = (okQ && okC && okL && okT && okR && okCr && okA) ? '' : 'none';
            });
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            apply();
        });

        [q, companyId, location, instrumentType, riskLevel, isCritical, isActive].forEach(el => {
            if (!el) return;
            el.addEventListener('input', apply);
            el.addEventListener('change', apply);
        });

        apply();
    })();
</script>

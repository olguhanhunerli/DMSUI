@using DMSUI.Entities.DTOs.Instruments
@model InstrumentDTO

@{
    ViewData["Title"] = "Ölçüm Aleti Düzenle";

    string TipTr(string? v) => (v ?? "").Trim() switch
    {
        "Dimensional" => "Boyutsal",
        "Electrical" => "Elektriksel",
        "Pressure" => "Basınç",
        "Temperature" => "Sıcaklık",
        "Other" => "Diğer",
        _ => "Diğer"
    };

    string DisiplinTr(string? v) => (v ?? "").Trim() switch
    {
        "Length" => "Uzunluk",
        "Temperature" => "Sıcaklık",
        "Pressure" => "Basınç",
        "Voltage" => "Gerilim",
        "Current" => "Akım",
        "Other" => "Diğer",
        _ => "Diğer"
    };

    string RiskTr(string? v) => (v ?? "").Trim() switch
    {
        "Low" => "Düşük",
        "Medium" => "Orta",
        "High" => "Yüksek",
        _ => "Orta"
    };
}

<h3>📏 Ölçüm Aleti Düzenle</h3>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Instrument_Id" />

    <div class="row">
        <div class="col-md-4">
            <label class="form-label">Firma</label>
            <input value="@(Model.CompanyName ?? "-")" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label class="form-label">Demirbaş Kodu</label>
            <input asp-for="Asset_Code" class="form-control" readonly />
        </div>

        <div class="col-md-4">
            <label class="form-label">Durum</label>
            <input asp-for="Status" class="form-control" readonly />
        </div>
    </div>

    <hr />

    <div class="row mt-3">
        <div class="col-md-4">
            <label class="form-label">Cihaz Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Marka</label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Model</label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label class="form-label">Seri Numarası</label>
            <input asp-for="Serial_No" class="form-control" />
            <span asp-validation-for="Serial_No" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Ölçüm Aralığı</label>
            <input asp-for="Measurement_Range" class="form-control" />
            <span asp-validation-for="Measurement_Range" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Çözünürlük</label>
            <input asp-for="Resolution" class="form-control" />
            <span asp-validation-for="Resolution" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label class="form-label">Birim</label>
            <input asp-for="Unit" class="form-control" />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Konum</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Sorumlu</label>
            <input asp-for="Owner_Person" class="form-control" />
            <span asp-validation-for="Owner_Person" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <div class="row mt-3">
        <div class="col-md-4">
            <label class="form-label">Cihaz Türü</label>
            <select asp-for="Instrument_Type" class="form-select">
                <option value="">Seçiniz</option>
                <option value="Dimensional" selected="@(Model.Instrument_Type == "Dimensional")">@TipTr("Dimensional")</option>
                <option value="Electrical" selected="@(Model.Instrument_Type == "Electrical")">@TipTr("Electrical")</option>
                <option value="Pressure" selected="@(Model.Instrument_Type == "Pressure")">@TipTr("Pressure")</option>
                <option value="Temperature" selected="@(Model.Instrument_Type == "Temperature")">@TipTr("Temperature")</option>
                <option value="Other" selected="@(Model.Instrument_Type == "Other")">@TipTr("Other")</option>
            </select>
            <span asp-validation-for="Instrument_Type" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Ölçüm Disiplini</label>
            <select asp-for="Measurement_Discipline" class="form-select">
                <option value="">Seçiniz</option>
                <option value="Length" selected="@(Model.Measurement_Discipline == "Length")">@DisiplinTr("Length")</option>
                <option value="Temperature" selected="@(Model.Measurement_Discipline == "Temperature")">@DisiplinTr("Temperature")</option>
                <option value="Pressure" selected="@(Model.Measurement_Discipline == "Pressure")">@DisiplinTr("Pressure")</option>
                <option value="Voltage" selected="@(Model.Measurement_Discipline == "Voltage")">@DisiplinTr("Voltage")</option>
                <option value="Current" selected="@(Model.Measurement_Discipline == "Current")">@DisiplinTr("Current")</option>
                <option value="Other" selected="@(Model.Measurement_Discipline == "Other")">@DisiplinTr("Other")</option>
            </select>
            <span asp-validation-for="Measurement_Discipline" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Risk Seviyesi</label>
            <select asp-for="Risk_Level" class="form-select">
                <option value="">Seçiniz</option>
                <option value="Low" selected="@(Model.Risk_Level == "Low")">@RiskTr("Low")</option>
                <option value="Medium" selected="@(Model.Risk_Level == "Medium")">@RiskTr("Medium")</option>
                <option value="High" selected="@(Model.Risk_Level == "High")">@RiskTr("High")</option>
            </select>
            <span asp-validation-for="Risk_Level" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label class="form-label">Belirsizlik</label>
            <input asp-for="Measurement_Uncertainty" class="form-control" placeholder="Örn: ±0.02 mm" />
            <span asp-validation-for="Measurement_Uncertainty" class="text-danger"></span>
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Is_Critical" id="isCritical" />
                <label class="form-check-label" for="isCritical">Kritik Cihaz</label>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Environment_Required" id="envRequired" />
                <label class="form-check-label" for="envRequired">Ortam Şartı Gerekli</label>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <label class="form-label">Ortam Notları</label>
            <input asp-for="Environment_Notes" class="form-control" placeholder="Örn: 20±1°C, %45±10 RH" />
            <span asp-validation-for="Environment_Notes" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <div class="row mt-3">
        <div class="col-md-3">
            <label class="form-label">Aktiflik</label>
            <input class="form-control" value="@(Model.IsActive ? "Aktif" : "Pasif")" readonly />
        </div>

        <div class="col-md-3">
            <label class="form-label">Oluşturan</label>
            <input value="@(string.IsNullOrWhiteSpace(Model.CreatedByName) ? "-" : Model.CreatedByName)" class="form-control" readonly />
        </div>

        <div class="col-md-3">
            <label class="form-label">Oluşturma Tarihi</label>
            <input value="@(Model.Created_At?.ToString("dd.MM.yyyy HH:mm") ?? "-")" class="form-control" readonly />
        </div>

        <div class="col-md-3">
            <label class="form-label">Güncelleme Tarihi</label>
            <input value="@(Model.Updated_At?.ToString("dd.MM.yyyy HH:mm") ?? "-")" class="form-control" readonly />
        </div>
    </div>

    <div class="mt-4 text-end">
        <button type="submit" class="btn btn-primary">
            💾 Güncelle
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            ↩️ Geri
        </a>
    </div>
</form>

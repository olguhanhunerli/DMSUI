@model DMSUI.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<form asp-controller="User" asp-action="Edit" method="post" class="container-fluid px-3 pb-4">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CompanyId" />

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bi bi-person-badge me-2 text-primary"></i>
                Kullanıcı Detayı
            </h4>
            <small class="text-muted">
                @Model.FirstName @Model.LastName • @Model.RoleName
            </small>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="bi bi-save me-1"></i> Kaydet
            </button>

            <a asp-controller="User"
               asp-action="Index"
               class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-x-circle me-1"></i> İptal
            </a>
        </div>
    </div>

    <div class="row g-4">

        <!-- SOL PROFİL -->
        <div class="col-xl-4 col-lg-5 col-md-12">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">

                    <div class="mb-3 d-flex justify-content-center">
                        <div class="rounded-circle bg-primary text-white d-flex
                            align-items-center justify-content-center"
                             style="width:90px;height:90px;font-size:32px;">
                            @Model.FirstName.Substring(0, 1)
                        </div>
                    </div>

                    <h5 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h5>
                    <div class="text-muted mb-2">@Model.UserName</div>
                    <span class="badge bg-secondary mb-2">@Model.RoleName</span>

                    <div class="mt-3">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.IsActive ? "Aktif" : "Pasif")
                        </span>
                    </div>

                    <hr />

                    <div class="text-start small">

                        <div class="mb-2">
                            <label class="form-label">Email</label>
                            <input asp-for="Email"
                                   class="form-control form-control-sm bg-light"
                                   readonly />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Telefon</label>
                            <input asp-for="PhoneNumber"
                                   class="form-control form-control-sm" />
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Şirket</label>
                            <input value="@Model.CompanyName"
                                   class="form-control form-control-sm bg-light"
                                   readonly />
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <!-- SAĞ TARAF -->
        <div class="col-xl-8 col-lg-7 col-md-12">

            <!-- ORGANİZASYON -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-semibold">
                    <i class="bi bi-diagram-3 me-2 text-primary"></i>
                    Organizasyon Bilgileri
                </div>

                <div class="card-body row g-3">

                    <div class="col-md-4">
                        <label class="form-label text-muted">Rol</label>
                        <select asp-for="RoleId"
                                asp-items="Model.RoleList"
                                class="form-select form-select-sm">
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label text-muted">Departman</label>
                        <select asp-for="DepartmentId"
                                asp-items="Model.DepartmentList"
                                class="form-select form-select-sm">
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label text-muted">Pozisyon</label>
                        <select asp-for="PositionId"
                                asp-items="Model.PositionList"
                                class="form-select form-select-sm">
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-muted">Yönetici</label>
                        <select asp-for="ManagerId"
                                asp-items="Model.ManagerList"
                                class="form-select form-select-sm">
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-muted">Şirket</label>
                        <input value="@Model.CompanyName"
                               class="form-control form-control-sm bg-light"
                               readonly />
                    </div>

                </div>
            </div>

            <!-- YETKİ & DURUM -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-semibold">
                    <i class="bi bi-shield-lock me-2 text-primary"></i>
                    Yetki & Durum
                </div>

                <div class="card-body row g-3">

                    <div class="col-md-4">
                        <label class="form-label text-muted">Onay Yetkisi</label>
                        <select asp-for="CanApprove" class="form-select form-select-sm">
                            <option value="true">Var</option>
                            <option value="false">Yok</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label text-muted">Onay Seviyesi</label>
                        <input asp-for="ApprovalLevel"
                               type="number"
                               class="form-control form-control-sm" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label text-muted">Durum</label>
                        <select asp-for="IsActive" class="form-select form-select-sm">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>

                </div>
            </div>

            <!-- SİSTEM -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-semibold">
                    <i class="bi bi-gear me-2 text-primary"></i>
                    Sistem & Tercihler
                </div>

                <div class="card-body row g-3">

                    <div class="col-md-3">
                        <label class="form-label text-muted">Dil</label>
                        <select asp-for="Language" class="form-select form-select-sm">
                            <option value="tr">Türkçe</option>
                            <option value="en">English</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-muted">Zaman Dilimi</label>
                        <input asp-for="TimeZone"
                               class="form-control form-control-sm" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-muted">Tema</label>
                        <select asp-for="Theme" class="form-select form-select-sm">
                            <option value="light">Açık</option>
                            <option value="dark">Koyu</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-muted">Bildirimler</label>
                        <input asp-for="NotificationPreferences"
                               class="form-control form-control-sm" />
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>

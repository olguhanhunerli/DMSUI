@model DMSUI.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<div class="container-fluid px-4">

    <!-- ÜST BAR -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bi bi-person-badge me-2 text-primary"></i>
                Kullanıcı Detayı
            </h4>
            <small class="text-muted">
                @Model.FirstName @Model.LastName • @Model.RoleName
            </small>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-outline-primary btn-sm">
                <i class="bi bi-pencil-square me-1"></i> Düzenle
            </a>

            <a asp-controller="User" asp-action="Index"
               class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Geri Dön
            </a>
        </div>
    </div>

    <div class="row g-4">

        <!-- SOL PROFİL KARTI -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">

                    <div class="mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex
                                    align-items-center justify-content-center"
                             style="width:90px;height:90px;font-size:32px;">
                            @Model.FirstName.Substring(0, 1)
                        </div>
                    </div>

                    <h5 class="fw-bold mb-1">
                        @Model.FirstName @Model.LastName
                    </h5>

                    <div class="text-muted mb-2">
                        @Model.UserName
                    </div>

                    <span class="badge bg-secondary mb-2">
                        @Model.RoleName
                    </span>

                    <div class="mt-3">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.IsActive ? "Aktif" : "Pasif")
                        </span>
                    </div>

                    <hr />

                    <div class="text-start small">
                        <div class="mb-2">
                            <i class="bi bi-envelope me-2"></i>
                            @Model.Email
                        </div>
                        <div class="mb-2">
                            <i class="bi bi-telephone me-2"></i>
                            @Model.PhoneNumber
                        </div>
                        <div>
                            <i class="bi bi-buildings me-2"></i>
                            @Model.CompanyName
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- SAĞ DETAY ALANLARI -->
        <div class="col-lg-8">

            <!-- ORGANİZASYON -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-semibold">
                    <i class="bi bi-diagram-3 me-2 text-primary"></i>
                    Organizasyon Bilgileri
                </div>

                <div class="card-body">
                    <div class="row g-3">

                        <div class="col-md-4">
                            <label class="form-label text-muted">Rol</label>
                            <div class="fw-semibold">@Model.RoleName</div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label text-muted">Departman</label>
                            <div class="fw-semibold">@Model.DepartmentName</div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label text-muted">Şirket</label>
                            <div class="fw-semibold">@Model.CompanyName</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted">Pozisyon</label>
                            <div class="fw-semibold">
                                @(Model.PositionName ?? "-")
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted">Yönetici</label>
                            <div class="fw-semibold">
                                @(Model.ManagerName ?? "-")
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- YETKİ & DURUM -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-semibold">
                    <i class="bi bi-shield-lock me-2 text-primary"></i>
                    Yetki & Durum
                </div>

                <div class="card-body">
                    <div class="row g-3">

                        <div class="col-md-4">
                            <label class="form-label text-muted">Onay Yetkisi</label>
                            <div>
                                <span class="badge @(Model.CanApprove ? "bg-success" : "bg-secondary")">
                                    @(Model.CanApprove ? "Var" : "Yok")
                                </span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label text-muted">Onay Seviyesi</label>
                            <div class="fw-semibold">
                                @(Model.CanApprove ? $"Seviye {Model.ApprovalLevel}" : "-")
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label text-muted">Durum</label>
                            <div>
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-semibold">
                    <i class="bi bi-gear me-2 text-primary"></i>
                    Sistem & Tercihler
                </div>

                <div class="card-body">
                    <div class="row g-3">

                        <div class="col-md-3">
                            <label class="form-label text-muted">Dil</label>
                            <div class="fw-semibold">@Model.Language</div>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-muted">Zaman Dilimi</label>
                            <div class="fw-semibold">@Model.TimeZone</div>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-muted">Tema</label>
                            <div class="fw-semibold">@Model.Theme</div>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-muted">Bildirimler</label>
                            <div class="fw-semibold">@Model.NotificationPreferences</div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@model DMSUI.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<form asp-action="Edit" method="post" class="container-fluid px-4">

    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-pencil-square me-2 text-primary"></i>
            Kullanıcı Düzenle
        </h4>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="bi bi-check-circle me-1"></i> Kaydet
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> İptal
            </a>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="fw-semibold mb-3">Temel Bilgiler</h6>

                    <div class="mb-3">
                        <label class="form-label">Ad</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Soyad</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-Posta</label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-semibold">Organizasyon</div>

                <div class="card-body row g-3">
                    <div class="col-md-4">
                        <label>Rol</label>
                        <input asp-for="RoleName" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label>Departman</label>
                        <input asp-for="DepartmentName" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label>Şirket</label>
                        <input asp-for="CompanyName" class="form-control" readonly/>
                    </div>

                    <div class="col-md-6">
                        <label>Pozisyon</label>
                        <input asp-for="PositionName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label>Yönetici</label>
                        <input asp-for="ManagerName" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-semibold">Yetkiler</div>

                <div class="card-body row g-3">
                    <div class="col-md-4">
                        <label>Onay Yetkisi</label>
                        <select asp-for="CanApprove" class="form-select">
                            <option value="true">Var</option>
                            <option value="false">Yok</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Onay Seviyesi</label>
                        <input asp-for="ApprovalLevel" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label>Durum</label>
                        <select asp-for="IsActive" class="form-select">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-semibold">Sistem</div>

                <div class="card-body row g-3">
                    <div class="col-md-3">
                        <label>Dil</label>
                        <input asp-for="Language" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label>Zaman Dilimi</label>
                        <input asp-for="TimeZone" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label>Tema</label>
                        <input asp-for="Theme" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label>Bildirimler</label>
                        <input asp-for="NotificationPreferences" class="form-control" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

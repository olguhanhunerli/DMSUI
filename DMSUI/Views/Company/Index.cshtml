@using DMSUI.Entities.DTOs.Company
@model List<CompanyListDTO>

@{
    ViewData["Title"] = "Şirketler";
}

<div class="container-fluid px-3 pb-4">

    <!-- ÜST BAR -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-building me-2 text-primary"></i>
            Şirketler
        </h4>

        <a asp-action="Create"
           class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Şirket
        </a>
    </div>

    <!-- TABLO -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-2">

            <div class="table-scroll-x">
                <table class="table table-hover align-middle mb-0 small w-100">
                    <thead class="table-light text-nowrap">
                        <tr>
                            <th class="px-3">#</th>
                            <th class="px-3">Şirket Adı</th>
                            <th class="px-3">Şirket Kodu</th>
                            <th class="px-3">Oluşturulma</th>
                            <th class="px-3">Güncellenme</th>
                            <th class="px-3 text-end">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="text-nowrap">

                        @{
                            int rowNo = 1;
                        }

                        @foreach (var company in Model)
                        {
                            <tr>
                                <td class="px-3">@rowNo</td>

                                <td class="fw-semibold px-3">
                                    @company.Name
                                </td>

                                <td class="px-3">
                                    <span class="badge bg-secondary">
                                        @company.CompanyCode
                                    </span>
                                </td>

                                <td class="px-3">
                                    @company.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>

                                <td class="px-3">
                                    @company.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>

                                <td class="px-3 text-end">
                                    <div class="btn-group btn-group-sm shadow-sm">

                                        <a asp-action="Edit"
                                           asp-route-id="@company.Id"
                                           class="btn btn-light border"
                                           title="Düzenle">
                                            <i class="bi bi-pencil-square text-primary"></i>
                                        </a>

                                        <button onclick="deleteCompany(@company.Id)"
                                                class="btn btn-light border"
                                                title="Sil">
                                            <i class="bi bi-trash text-danger"></i>
                                        </button>

                                    </div>
                                </td>
                            </tr>

                            rowNo++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>


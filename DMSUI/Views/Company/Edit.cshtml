@using DMSUI.ViewModels.Company
@model CompanyViewModel

@{
    ViewData["Title"] = "Şirket Güncelle";
}

<form asp-controller="Company"
      asp-action="Edit"
      method="post"
      class="container-fluid px-3 pb-4">
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-building me-2 text-primary"></i>
            Şirket Güncelle
        </h4>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="bi bi-save me-1"></i> Kaydet
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                İptal
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-12">

            <div class="card border-0 shadow-sm">
                <div class="card-body">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Şirket Adı</label>
                        <input asp-for="Name"
                               class="form-control"
                               placeholder="Şirket adını giriniz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CompanyCode" class="form-label fw-semibold">Şirket Kodu</label>
                        <input asp-for="CompanyCode"
                               class="form-control"
                               placeholder="Örn: DMS001" />
                        <span asp-validation-for="CompanyCode" class="text-danger small"></span>
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

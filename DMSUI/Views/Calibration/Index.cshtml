﻿@using DMSUI.Entities.DTOs.Calibration
@using DMSUI.Entities.DTOs.Common
@model PagedResultDTO<CalibrationItemDTO>

@{
    ViewData["Title"] = "Kalibrasyonlar";

    var q = Context.Request.Query["q"].ToString();
    var result = Context.Request.Query["result"].ToString(); 
    var companyId = Context.Request.Query["companyId"].ToString();
    var location = Context.Request.Query["location"].ToString();

    var pageSize = Model?.PageSize ?? 10;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Kalibrasyonlar</h4>

    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Yeni Kalibrasyon
    </a>
</div>

<form method="get" class="card shadow-sm mb-3" id="filterForm">
    <div class="card-body py-2">
        <div class="row g-2 align-items-center">

            <div class="col-6 col-md-1">
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="25" selected="@(pageSize == 25)">25</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                </select>
            </div>

            <div class="col-12 col-md-3">
                <input id="fQ"
                       name="q"
                       value="@q"
                       class="form-control form-control-sm"
                       placeholder="Cihaz / Kod / Seri / Sertifika ara..." />
            </div>
@* 
            <div class="col-6 col-md-2">
                <select id="fResult" name="result" class="form-select form-select-sm">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(result))">Tümü</option>
                    <option value="PASS" selected="@(result == "PASS")">PASS</option>
                    <option value="FAIL" selected="@(result == "FAIL")">FAIL</option>
                </select>
            </div> *@

            <div class="col-12 col-md-2">
                <input id="fLocation"
                       name="location"
                       value="@location"
                       class="form-control form-control-sm"
                       placeholder="Lokasyon" />
            </div>

            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="bi bi-search me-1"></i> Ara
                </button>
            </div>

        </div>
    </div>
</form>
<a class="btn btn-success btn-sm mb-2"
   asp-action="ExportExcel"
   asp-route-page="@Model.Page"
   asp-route-pageSize="@pageSize"
   asp-route-q="@q"
   asp-route-result="@result"
   asp-route-companyId="@companyId"
   asp-route-location="@location">
    <i class="bi bi-file-earmark-excel me-1"></i> Excel
</a>
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr class="small">
                    <th>Şirket</th>
                    <th>Kod</th>
                    <th>Cihaz</th>
                    <th>Seri No</th>
                    <th>Lokasyon</th>
                    <th>Kalibrasyon Tarihi</th>
                    <th>Kalibrasyon Geçerlilik Tarihi</th>
                    <th style="width:90px;" class="text-center">Kalan</th>
                    <th style="width: 90px" class="text-center">Firma</th>
                    <th>Sertifika No</th>
                    <th style="width:110px;" class="text-center">Dosya Yüklü Mü?</th>
                    <th style="width:120px;" class="text-center">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items != null && Model.Items.Any())
                {
                    var row = (Model.Page - 1) * Model.PageSize;

                    foreach (var item in Model.Items)
                    {
                        row++;

                        var rowClass =
                        item.Result == "FAIL" ? "table-danger" :
                        item.RemainingDays < 0 ? "table-danger" :
                        item.RemainingDays <= 30 ? "table-warning" :
                        "";

                        <tr class="@rowClass"
                            data-result="@item.Result"
                            data-companyid="@item.CompanyId"
                            data-location="@item.InstrumentLocation"
                            data-q="@($"{item.InstrumentName} {item.AssetCode} {item.SerialNo} {item.CertificateNo}")">

                            <td>
                                <div class="fw-semibold">@item.CompanyName</div>
                            </td>

                            <td class="fw-semibold">@item.AssetCode</td>
                            <td>@item.InstrumentName</td>
                            <td>@item.SerialNo</td>
                            <td>@item.InstrumentLocation</td>

                            <td>@item.CalibrationDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.DueDate.ToString("dd.MM.yyyy")</td>

                            <td class="text-end">
                                <span class="fw-semibold @(item.RemainingDays <= 30 ? "text-danger" : "")">
                                    @item.RemainingDays
                                </span>
                                <span class="text-muted small">gün</span>
                            </td>

                            <td>@item.CalibrationCompany</td>
                            <td class="text-nowrap">@item.CertificateNo</td>


                            <td>
                                @if (item.Files?.Any() == true)
                                {
                                    <span class="text-success fw-semibold">
                                        <i class="bi bi-paperclip me-1"></i> Dosya Yüklü
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-x-circle me-1"></i> Dosya Yok
                                    </span>
                                }
                            </td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-secondary"
                                       title="Detay"
                                       asp-action="Detail"
                                       asp-route-id="@item.CalibrationId">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a class="btn btn-outline-primary"
                                       title="Düzenle"
                                       asp-action="Edit"
                                       asp-route-id="@item.CalibrationId">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="btn btn-outline-dark btn-sm"
                                       asp-action="Pdf"
                                       asp-route-id="@item.CalibrationId">
                                        <i class="bi bi-filetype-pdf me-1"></i> PDF
                                    </a>
                                    <button type="button"
                                            class="btn btn-outline-success"
                                            title="Doküman Ekle"
                                            data-bs-toggle="modal"
                                            data-bs-target="#uploadModal"
                                            data-calibration-id="@item.CalibrationId"
                                            data-instrument-name="@item.InstrumentName">
                                        <i class="bi bi-paperclip"></i>
                                    </button>

                                    <form asp-action="Delete"
                                          asp-route-id="@item.CalibrationId"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-outline-danger"
                                                title="Sil"
                                                onclick="return confirm('Silmek istediğine emin misin?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="13" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <div class="text-muted small">
            Toplam: <strong>@Model.TotalCount</strong>
            • Sayfa: <strong>@Model.Page</strong> / <strong>@Model.TotalPages</strong>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    @{
                        int current = Model.Page;
                        int total = Model.TotalPages;

                        int start = Math.Max(1, current - 2);
                        int end = Math.Min(total, current + 2);
                    }

                    <li class="page-item @(current == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(current - 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-result="@result"
                           asp-route-companyId="@companyId"
                           asp-route-location="@location">‹</a>
                    </li>

                    @if (start > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="1"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-result="@result"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location">1</a>
                        </li>

                        @if (start > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">…</span></li>
                        }
                    }

                    @for (int i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == current ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-result="@result"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location">@i</a>
                        </li>
                    }

                    @if (end < total)
                    {
                        @if (end < total - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">…</span></li>
                        }

                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@total"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-result="@result"
                               asp-route-companyId="@companyId"
                               asp-route-location="@location">@total</a>
                        </li>
                    }

                    <li class="page-item @(current == total ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(current + 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-result="@result"
                           asp-route-companyId="@companyId"
                           asp-route-location="@location">›</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<div class="modal fade" id="uploadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="UploadCalibrationFiles"
                  asp-controller="CalibrationFile"
                  method="post"
                  enctype="multipart/form-data">

                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Doküman Yükle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="CalibrationId" id="ufCalibrationId" />

                    <div class="mb-2">
                        <label class="form-label small text-muted">Cihaz</label>
                        <input type="text" class="form-control form-control-sm" id="ufInstrumentName" name="InstrumentName" readonly />
                    </div>

                    <div class="mb-2">
                        <label class="form-label small text-muted">Dosya</label>
                        <input type="file" name="File" class="form-control form-control-sm" required />
                    </div>

                    <div class="row g-2">
                        <input type="hidden" name="FileType" value="ORIGINAL" />
                        <div class="col-12">
                            <label class="form-label small text-muted">Açıklama</label>
                            <input type="text" name="Description" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-upload me-1"></i> Yükle
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('show.bs.modal', function (event) {
        const modal = document.getElementById('uploadModal');
        if (!modal || event.target !== modal) return;

        const btn = event.relatedTarget;
        const calibrationId = btn.getAttribute('data-calibration-id');
        const instrumentName = btn.getAttribute('data-instrument-name') || '';

        modal.querySelector('#ufCalibrationId').value = calibrationId;
        modal.querySelector('#ufInstrumentName').value = instrumentName;
    });

    (function () {
        const form = document.getElementById('filterForm');
        if (!form) return;

        const q = document.getElementById('fQ');
        const result = document.getElementById('fResult');
        const companyId = document.getElementById('fCompanyId');
        const location = document.getElementById('fLocation');

        function norm(v) {
            return (v || '').toString().trim().toLowerCase();
        }

        function apply() {
            const qv = norm(q?.value);
            const rv = norm(result?.value);
            const civ = norm(companyId?.value);
            const lv = norm(location?.value);

            const rows = document.querySelectorAll('tbody tr[data-result]');

            rows.forEach(tr => {
                const trResult = norm(tr.dataset.result);
                const trCompanyId = norm(tr.dataset.companyid);
                const trLocation = norm(tr.dataset.location);
                const trHay = norm(tr.dataset.q);

                const okQ = !qv || trHay.includes(qv);
                const okR = !rv || trResult === rv;
                const okC = !civ || trCompanyId === civ;       
                const okL = !lv || trLocation.includes(lv);    

                tr.style.display = (okQ && okR && okC && okL) ? '' : 'none';
            });
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            apply();
        });

        [q, result, companyId, location].forEach(el => {
            if (!el) return;
            el.addEventListener('input', apply);
            el.addEventListener('change', apply);
        });

        apply();
    })();
</script>

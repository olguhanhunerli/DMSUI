@using DMSUI.Entities.DTOs.Calibration
@model EditCalibrationDTO

@{
    ViewData["Title"] = "Kalibrasyon Düzenle";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Kalibrasyon Düzenle</h4>

    <div class="d-flex gap-2">
        <a asp-action="Detail" asp-route-id="@Model.CalibrationId" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Geri
        </a>
    </div>
</div>

<form asp-action="Edit" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="CalibrationId" />
    <input type="hidden" asp-for="InstrumentId" />
    <input type="hidden" asp-for="CompanyId" />
    <input type="hidden" asp-for="DueDate" />

    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h6 class="text-muted mb-0">Cihaz Bilgileri (Salt okunur)</h6>

            <span class="badge rounded-pill @(string.Equals(Model.Result, "PASS", StringComparison.OrdinalIgnoreCase) ? "bg-success" : "bg-danger")">
                @Model.Result
            </span>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="text-muted small">Kod</div>
                <div class="fw-semibold">@Model.AssetCode</div>
            </div>

            <div class="col-md-5">
                <div class="text-muted small">Cihaz</div>
                <div class="fw-semibold">@Model.InstrumentName</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Seri No</div>
                <div>@Model.SerialNo</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Şirket</div>
                <div>@Model.CompanyName</div>
            </div>
        </div>

        <hr />

        <h6 class="text-muted mb-3">Kalibrasyon Bilgileri</h6>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <label asp-for="CalibrationDate" class="form-label small text-muted mb-1">Kalibrasyon Tarihi</label>
                <input asp-for="CalibrationDate" type="date" class="form-control form-control-sm" />
                <span asp-validation-for="CalibrationDate" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="IntervalMonths" class="form-label small text-muted mb-1">Aralık (Ay)</label>
                <input asp-for="IntervalMonths" type="number" min="1" max="120" class="form-control form-control-sm" />
                <span asp-validation-for="IntervalMonths" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label small text-muted mb-1">Geçerlilik Tarihi (Hesaplanır)</label>
                <input value="@Model.DueDate.ToString("yyyy-MM-dd")" type="date" class="form-control form-control-sm" readonly />
            </div>

            <div class="col-md-3">
                <label asp-for="Result" class="form-label small text-muted mb-1">Sonuç</label>
                <select asp-for="Result" class="form-select form-select-sm">
                    <option value="PASS">PASS</option>
                    <option value="FAIL">FAIL</option>
                </select>
                <span asp-validation-for="Result" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="InstrumentLocation" class="form-label small text-muted mb-1">Lokasyon</label>
                <input asp-for="InstrumentLocation" class="form-control form-control-sm" />
                <span asp-validation-for="InstrumentLocation" class="text-danger small"></span>
            </div>
        </div>

        <hr />

        <h6 class="text-muted mb-3">Firma & Sertifika</h6>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <label asp-for="CalibrationCompany" class="form-label small text-muted mb-1">Kalibrasyon Firması</label>
                <input asp-for="CalibrationCompany" class="form-control form-control-sm" />
                <span asp-validation-for="CalibrationCompany" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="CertificateNo" class="form-label small text-muted mb-1">Sertifika No</label>
                <input asp-for="CertificateNo" class="form-control form-control-sm" />
                <span asp-validation-for="CertificateNo" class="text-danger small"></span>
            </div>
        </div>

        <div class="row g-3 mb-2">
            <div class="col-12">
                <label asp-for="Notes" class="form-label small text-muted mb-1">Notlar</label>
                <textarea asp-for="Notes"
                          class="form-control form-control-sm"
                          rows="4"
                          placeholder="Kalibrasyon ile ilgili notlar..."></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>
        </div>

        <hr />

        <div class="d-flex align-items-center justify-content-between mb-2">
            <h6 class="text-muted mb-0">Dosyalar</h6>
        </div>

        @if (Model.Files?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Dosya</th>
                            <th>Açıklama</th>
                            <th class="text-center">Yükleyen</th>
                            <th class="text-center">Yükleme Tarihi</th>
                            <th class="text-center">Güncelleyen</th>
                            <th class="text-center">Güncelleme Tarihi</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var file in Model.Files)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-paperclip me-1 text-secondary"></i>
                                    <span class="fw-semibold">@file.FileOriginalName</span>
                                </td>

                                <td>
                                    <span class="fw-semibold">@file.Description</span>
                                </td>

                                <td class="text-center">@file.CreatedByName</td>

                                <td class="text-center">
                                    @file.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>

                                <td class="text-center">
                                    @(file.UploadedByName ?? "-")
                                </td>

                                <td class="text-center">
                                    @(file.UpdatedAt.ToString("dd.MM.yyyy HH:mm") ?? "-")
                                </td>

                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="CalibrationFile"
                                           asp-action="DownloadOriginal"
                                           asp-route-fileId="@file.FileId"
                                           class="btn btn-outline-primary"
                                           title="Dosyayı indir">
                                            <i class="bi bi-download"></i>
                                        </a>

                                        @if (!string.IsNullOrWhiteSpace(file.PdfFilePath))
                                        {
                                            <a asp-controller="CalibrationFile"
                                               asp-action="DownloadPdf"
                                               asp-route-fileId="@file.FileId"
                                               class="btn btn-outline-danger"
                                               title="PDF indir">
                                                <i class="bi bi-filetype-pdf"></i>
                                            </a>
                                        }

                                        <form asp-controller="CalibrationFile"
                                              asp-action="DeleteFile"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Bu dosyayı silmek istediğine emin misin?');">
                                            @Html.AntiForgeryToken()

                                            <input type="hidden" name="fileId" value="@file.FileId" />
                                            <input type="hidden" name="calibrationId" value="@Model.CalibrationId" />

                                            <button type="submit"
                                                    class="btn btn-outline-danger btn-sm"
                                                    title="Dosyayı sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-light text-muted small">
                <i class="bi bi-x-circle me-1"></i> Bu kalibrasyona ait dosya bulunmuyor.
            </div>
        }

        <hr />

        <h6 class="text-muted mb-3">Kayıt Bilgileri (Salt okunur)</h6>

        <div class="row g-3">
            <div class="col-md-4">
                <div class="text-muted small">Oluşturan</div>
                <div>@(Model.CreatedByName ?? "-")</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Oluşturma Tarihi</div>
                <div>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Son Güncelleyen</div>
                <div>@(Model.UpdatedByName ?? "-")</div>
                <div class="text-muted small">
                    @(Model.UpdatedAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            İptal
        </a>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-1"></i> Kaydet
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@using DMSUI.Entities.DTOs.Calibration
@model CalibrationItemDTO

@{
    ViewData["Title"] = "Kalibrasyon Detayı";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Kalibrasyon Detayı</h4>

    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i> Geri
    </a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">

        <h6 class="text-muted mb-3">Cihaz Bilgileri</h6>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="text-muted small">Kod</div>
                <div class="fw-semibold">@Model.AssetCode</div>
            </div>

            <div class="col-md-5">
                <div class="text-muted small">Cihaz</div>
                <div class="fw-semibold">@Model.InstrumentName</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Seri No</div>
                <div>@Model.SerialNo</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Lokasyon</div>
                <div>@Model.Location</div>
            </div>
        </div>

        <hr />

        <h6 class="text-muted mb-3">Kalibrasyon Bilgileri</h6>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="text-muted small">Kalibrasyon Tarihi</div>
                <div>@Model.CalibrationDate.ToString("dd.MM.yyyy")</div>
            </div>

            <div class="col-md-3">
                <div class="text-muted small">Geçerlilik Tarihi</div>
                <div>@Model.DueDate.ToString("dd.MM.yyyy")</div>
            </div>

            <div class="col-md-2">
                <div class="text-muted small">Aralık (Ay)</div>
                <div>@Model.IntervalMonths</div>
            </div>

            <div class="col-md-2">
                <div class="text-muted small">Kalan Gün</div>
                <div class="fw-semibold @(Model.RemainingDays <= 30 ? "text-danger" : "")">
                    @Model.RemainingDays
                </div>
            </div>

            <div class="col-md-2 text-center">
                <div class="text-muted small">Sonuç</div>
                <span class="badge rounded-pill @(Model.Result == "PASS" ? "bg-success" : "bg-danger")">
                    @Model.Result
                </span>
            </div>
        </div>

        <hr />

        <h6 class="text-muted mb-3">Firma & Sertifika</h6>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="text-muted small">Kalibrasyon Firması</div>
                <div>@Model.CalibrationCompany</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Sertifika No</div>
                <div>@Model.CertificateNo</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Şirket</div>
                <div>@Model.CompanyName</div>
            </div>
        </div>

        <hr />

        <h6 class="text-muted mb-3">Dosyalar</h6>

        @if (Model.Files != null && Model.Files.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Dosya</th>
                            <th>Açıklama</th>
                            <th class="text-center">Yükleyen</th>
                            <th class="text-center">Yükleme Tarihi</th>
                            <th class="text-center">Güncelleyen</th>
                            <th class="text-center">Güncelleme Tarihi</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.Files)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-paperclip me-1 text-secondary"></i>
                                    <span class="fw-semibold">@file.FileOriginalName</span>
                                   
                                </td>
                                <td>
                                    <span class="fw-semibold">@file.Description</span>
                                </td>
                                <td class="text-center">
                                    @file.CreatedByName
                                </td>
                                <td class="text-center">
                                    @file.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td class="text-center">
                                    @file.UploadedByName
                                </td>
                                <td class="text-center">
                                    @file.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">

                                        <a asp-action="DownloadOriginal"
                                           asp-route-fileId="@file.FileId"
                                           class="btn btn-outline-primary"
                                           title="Dosyayı indir">
                                            <i class="bi bi-download"></i>
                                        </a>

                                        @if (!string.IsNullOrWhiteSpace(file.PdfFilePath))
                                        {
                                            <a asp-action="DownloadPdf"
                                               asp-route-fileId="@file.FileId"
                                               class="btn btn-outline-danger"
                                               title="PDF indir">
                                                <i class="bi bi-filetype-pdf"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-light text-muted small">
                <i class="bi bi-x-circle me-1"></i> Bu kalibrasyona ait dosya bulunmuyor.
            </div>
        }
        <hr />

        <h6 class="text-muted mb-3">Kayıt Bilgileri</h6>

        <div class="row g-3">
            <div class="col-md-4">
                <div class="text-muted small">Oluşturan</div>
                <div>@Model.CreatedByName</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Oluşturma Tarihi</div>
                <div>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
            </div>

            <div class="col-md-4">
                <div class="text-muted small">Güncelleyen</div>
                <div>@Model.UpdatedByName</div>
                <div class="text-muted small">
                    @Model.UpdatedAt?.ToString("dd.MM.yyyy HH:mm")
                </div>
            </div>
        </div>

    </div>
</div>

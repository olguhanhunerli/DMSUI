@using DMSUI.Entities.DTOs.Category
@model List<CategoryListDTO>

@{
    ViewData["Title"] = "Kategori Yönetimi";

    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
}

<div class="container-fluid mt-3">
    <form asp-action="Search" method="post" class="d-flex gap-2 mb-3">
        <input type="text"
               name="keyword"
               class="form-control form-control-sm"
               placeholder="Kategori ara..." />

        <button type="submit" class="btn btn-sm btn-primary">
            <i class="bi bi-search"></i>
        </button>

        <a asp-action="Index" class="btn btn-sm btn-secondary">
            Temizle
        </a>
    </form>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">
            <i class="bi bi-diagram-3 me-1"></i> Kategori Yönetimi
        </h5>

        <a asp-action="Create" class="btn btn-sm btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Kategori
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-2">

            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle mb-0">

                    <thead class="table-light small">
                        <tr>
                            <th>Ad</th>
                            <th>Kod</th>
                            <th>Üst Kategori</th>
                            <th>Şirket</th>
                            <th class="text-center">Sıra</th>
                            <th class="text-center">Durum</th>
                            <th>Oluşturan</th>
                            <th>Oluşturma</th>
                            <th>Güncelleyen</th>
                            <th>Güncelleme</th>
                            <th class="text-end" style="width:120px">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="small">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Code</td>
                                <td>
                                    @(item.ParentName ?? "Ana Kategori")
                                </td>
                                <td>@item.CompanyName</td>

                                <td class="text-center">@item.SortOrder</td>

                                <td class="text-center">
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                        @(item.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </td>

                                <td>@item.CreatedByName</td>
                                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>@item.UpdatedByName</td>
                                <td>@item.UpdatedAt?.ToString("dd.MM.yyyy")</td>

                                <td class="text-end">
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <button class="btn btn-sm btn-danger"
                                            onclick="deleteCategory(@item.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="11" class="text-center text-muted py-4">
                                    Kayıt bulunamadı.
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">

                <div class="text-muted small">
                    Toplam <b>@totalCount</b> kayıt
                </div>

                <nav>
                    <ul class="pagination pagination-sm mb-0">

                        <li class="page-item @(page == 1 ? "disabled" : "")">
                            <a class="page-link"
                               href="?page=@(page - 1)&pageSize=@pageSize">«</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == page ? "active" : "")">
                                <a class="page-link"
                                   href="?page=@i&pageSize=@pageSize">@i</a>
                            </li>
                        }

                        <li class="page-item @(page == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               href="?page=@(page + 1)&pageSize=@pageSize">»</a>
                        </li>

                    </ul>
                </nav>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
         async function deleteCategory(id) {
            if (!confirm("Bu kategori silinsin mi?")) return;

            const res = await fetch("/Category/Delete", {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ id: id })
            });

            if (res.ok) location.reload();
            else alert("Silme başarısız!");
        }
    </script>
}

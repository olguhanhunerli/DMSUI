@using DMSUI.Entities.DTOs.Category
@model List<CategoryListDTO>

@{
    ViewData["Title"] = "Kategori Yönetimi";

    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
}

<div class="container-fluid mt-3">

    <form asp-action="Search" method="post" class="d-flex gap-2 mb-3">
        @Html.AntiForgeryToken()

        <input type="text"
               name="keyword"
               class="form-control form-control-sm"
               placeholder="Kategori ara..." />

        <button type="submit" class="btn btn-sm btn-primary" title="Ara">
            <i class="bi bi-search"></i>
        </button>

        <a asp-action="Index" class="btn btn-sm btn-secondary">
            Temizle
        </a>
    </form>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">
            <i class="bi bi-diagram-3 me-1"></i> Kategori Yönetimi
        </h5>

        <a asp-action="Create" class="btn btn-sm btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Kategori
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-2">

            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle mb-0">

                    <thead class="table-light small">
                        <tr>
                            <th>Ad</th>
                            <th>Kod</th>
                            <th>Üst Kategori</th>
                            <th>Şirket</th>
                            <th class="text-center">Sıra</th>
                            <th class="text-center">Durum</th>
                            <th>Oluşturan</th>
                            <th>Oluşturma</th>
                            <th>Güncelleyen</th>
                            <th>Güncelleme</th>
                            <th class="text-end" style="width:140px">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="small">

                        @if (Model?.Any() == true)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@item.Name</td>
                                    <td>@item.Code</td>

                                    <td>
                                        @(string.IsNullOrWhiteSpace(item.ParentName) ? "Ana Kategori" : item.ParentName)
                                    </td>

                                    <td>@item.CompanyName</td>

                                    <td class="text-center">@item.SortOrder</td>

                                    <td class="text-center">
                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                            @(item.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>

                                    <td>@(item.CreatedByName ?? "-")</td>
                                    <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>

                                    <td>@(item.UpdatedByName ?? "-")</td>
                                    <td>@(item.UpdatedAt?.ToString("dd.MM.yyyy") ?? "-")</td>

                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-warning"
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-danger"
                                                    title="Sil"
                                                    onclick="kategoriSil(@item.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center text-muted py-4">
                                    Kayıt bulunamadı.
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">

                <div class="text-muted small">
                    Toplam <b>@totalCount</b> kayıt
                </div>

                @if (totalPages > 1)
                {
                    <nav aria-label="Sayfalama">
                        <ul class="pagination pagination-sm mb-0">

                            <li class="page-item @(page == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   href="?page=@(page - 1)&pageSize=@pageSize"
                                   aria-label="Önceki">«</a>
                            </li>

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == page ? "active" : "")">
                                    <a class="page-link"
                                       href="?page=@i&pageSize=@pageSize">@i</a>
                                </li>
                            }

                            <li class="page-item @(page == totalPages ? "disabled" : "")">
                                <a class="page-link"
                                   href="?page=@(page + 1)&pageSize=@pageSize"
                                   aria-label="Sonraki">»</a>
                            </li>

                        </ul>
                    </nav>
                }

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function kategoriSil(id) {
            if (!confirm("Bu kategori silinsin mi?")) return;

            try {
                const res = await fetch("/Category/Delete", {
                    method: "DELETE",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ id })
                });

                if (res.ok) {
                    location.reload();
                    return;
                }

                const msg = await res.text().catch(() => "");
                alert(msg || "Silme işlemi başarısız.");
            } catch (e) {
                alert("Silme işlemi sırasında hata oluştu.");
            }
        }
    </script>
}

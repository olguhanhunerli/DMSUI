@model DMSUI.ViewModels.Category.CategoryEditViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Kategori Düzenle
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">

                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CompanyId" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />

                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Kategori Adı</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Code" class="form-label">Kategori Kodu</label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SortOrder" class="form-label">Sıra</label>
                                <input asp-for="SortOrder" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ParentId" class="form-label">Üst Kategori</label>
                                <select asp-for="ParentId" asp-items="Model.ParentSelectList" class="form-select">
                                    <option value="">-- Ana Kategori --</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Şirket</label>
                                <input class="form-control" value="@Model.CompanyName" disabled/>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="col-md-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsDeleted" class="form-check-input" />
                                    <label asp-for="IsDeleted" class="form-check-label">Silinmiş</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Oluşturan</label>
                                <input class="form-control" value="@Model.CreatedByName" disabled />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Son Güncelleyen</label>
                                <input class="form-control" value="@Model.UpdatedByName" disabled />
                            </div>

                        </div>

                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Geri
                            </a>

                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


@using DMSUI.Entities.DTOs.Document
@using DMSUI.Entities.DTOs.Revision
@model dynamic

@{
    ViewData["Title"] = "Kontrol Paneli";

    int okunacakBekleyenSayisi = ViewBag.PendingReadCount ?? 0;
    int onayBekleyenSayisi = ViewBag.PendingApprovalCount ?? 0;
    int revizyonBekleyenSayisi = ViewBag.PendingRevisionsCount ?? 0;

    string aktifSekme = (ViewBag.ActiveTab as string) ?? "approval";

    var onayBekleyenDokumanlar = ViewBag.PendingApprovals as List<MyPendingDocumentDTO>;
    var okunacakDokumanlar = ViewBag.PendingReads as IEnumerable<dynamic>;
    var uzerimdekiRevizyonlar = ViewBag.PendingRevisions as List<MyActiveRevisionDTO>;

    int toplamBekleyen = okunacakBekleyenSayisi + onayBekleyenSayisi + revizyonBekleyenSayisi;
}

<div class="container-fluid mt-3">
    <div class="row g-3">

        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center py-2">
                    <div class="fw-semibold">
                        <i class="bi bi-hourglass-split me-1"></i> Bekleyen İşlerim
                    </div>
                    <span class="badge bg-primary">Toplam: @toplamBekleyen</span>
                </div>

                <div class="card-body p-2">
                    <div class="list-group list-group-flush">

                        <div class="fw-semibold small text-muted mb-2">
                            <i class="bi bi-folder me-1"></i> Doküman İşlemleri
                        </div>

                        <a asp-action="Index" asp-route-tab="read"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center small @(aktifSekme=="read"?"active":"")">
                            Okunması Gerekenler
                            <span class="badge bg-secondary">@okunacakBekleyenSayisi</span>
                        </a>

                        <a asp-action="Index" asp-route-tab="approval"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center small @(aktifSekme=="approval"?"active":"")">
                            Onay Bekleyenler
                            <span class="badge bg-warning text-dark">@onayBekleyenSayisi</span>
                        </a>

                        <a asp-action="Index" asp-route-tab="revisions"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center small @(aktifSekme=="revisions"?"active":"")">
                            Üzerimdeki Revizyonlar
                            <span class="badge bg-danger">@revizyonBekleyenSayisi</span>
                        </a>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm h-100">

                <div class="card-header d-flex justify-content-between align-items-center py-2">
                    <div class="fw-semibold">
                        @if (aktifSekme == "approval")
                        {
                            <span><i class="bi bi-check2-circle me-1"></i> Onay Bekleyen Dokümanlar</span>
                        }
                        else if (aktifSekme == "revisions")
                        {
                            <span><i class="bi bi-arrow-repeat me-1"></i> Üzerimdeki Revizyonlar</span>
                        }
                        else
                        {
                            <span><i class="bi bi-eye me-1"></i> Okunması Gereken Dokümanlar</span>
                        }
                    </div>

                    <input type="text"
                           class="form-control form-control-sm w-50"
                           placeholder="Ara..."
                           id="q"
                           onkeyup="tabloFiltrele()" />
                </div>

                <div class="card-body p-2">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle mb-0" id="tbl">
                            <thead class="table-light">
                                <tr class="small">
                                    <th></th>
                                    <th>Kod</th>
                                    <th>Ad</th>
                                    <th>Kategori / Sahip</th>
                                    <th class="text-end">Bilgi</th>
                                </tr>
                            </thead>

                            <tbody class="small">

                                @if (aktifSekme == "approval")
                                {
                                    if (onayBekleyenDokumanlar?.Any() == true)
                                    {
                                        foreach (var d in onayBekleyenDokumanlar)
                                        {
                                            <tr onclick="location.href='@Url.Action("Detail","Approval",new{id=d.Id})'" style="cursor:pointer">
                                                <td><span class="badge bg-warning">●</span></td>
                                                <td class="fw-semibold">@d.DocumentCode</td>
                                                <td>@d.Title</td>
                                                <td>@d.CreatedByName</td>
                                                <td class="text-end">@d.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="text-center text-muted">Kayıt yok</td></tr>
                                    }
                                }
                                else if (aktifSekme == "revisions")
                                {
                                    if (uzerimdekiRevizyonlar?.Any() == true)
                                    {
                                        foreach (var r in uzerimdekiRevizyonlar)
                                        {
                                            <tr onclick="location.href='@Url.Action("RevisionCreate","Document",new{documentId=r.DocumentId})'" style="cursor:pointer">
                                                <td><span class="badge bg-danger">●</span></td>
                                                <td class="fw-semibold">@r.DocumentCode</td>
                                                <td>@r.DocumentTitle</td>
                                                <td>@r.CategoryName</td>
                                                <td class="text-end">@r.CurrentVersion → @r.NewVersionNumber</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="text-center text-muted">Aktif revizyon yok</td></tr>
                                    }
                                }
                                else
                                {
                                    if (okunacakDokumanlar != null && okunacakDokumanlar.Cast<object>().Any())
                                    {
                                        foreach (var x in okunacakDokumanlar)
                                        {
                                            <tr>
                                                <td><span class="badge bg-secondary">●</span></td>
                                                <td class="fw-semibold">@x.DocumentCode</td>
                                                <td>@x.Title</td>
                                                <td>@(x.CategoryName ?? x.CreatedByName)</td>
                                                <td class="text-end">@((x.CreatedAt as DateTime?)?.ToString("dd.MM.yyyy") ?? "-")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="text-center text-muted">Okuma kaydı yok</td></tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer small text-muted">
                    Toplam: @(aktifSekme == "approval" ? onayBekleyenSayisi :
                    aktifSekme == "revisions" ? revizyonBekleyenSayisi :
                    okunacakBekleyenSayisi)
                </div>

            </div>
        </div>

    </div>
</div>

<script>
    function tabloFiltrele() {
        const q = document.getElementById('q').value.toLowerCase();
        document.querySelectorAll('#tbl tbody tr').forEach(r => {
            r.style.display = r.innerText.toLowerCase().includes(q) ? '' : 'none';
        });
    }
</script>

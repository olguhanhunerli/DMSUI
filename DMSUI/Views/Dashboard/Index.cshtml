@using DMSUI.Entities.DTOs.Document
@using DMSUI.Entities.DTOs.Revision
@model dynamic

@{
    ViewData["Title"] = "Dashboard";

    int pendingReadCount = ViewBag.PendingReadCount ?? 0;
    int pendingApprovalCount = ViewBag.PendingApprovalCount ?? 0;
    int pendingRevisionsCount = ViewBag.PendingRevisionsCount ?? 0;

    string activeTab = (ViewBag.ActiveTab as string) ?? "approval";

    var pendingApprovals = ViewBag.PendingApprovals as List<MyPendingDocumentDTO>;
    var pendingReads = ViewBag.PendingReads as IEnumerable<dynamic>;
    var pendingRevisions = ViewBag.PendingRevisions as List<MyActiveRevisionDTO>;

    int totalPending = pendingReadCount + pendingApprovalCount + pendingRevisionsCount;
}

<div class="container-fluid mt-3">
    <div class="row g-3">

        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center py-2">
                    <div class="fw-semibold">
                        <i class="bi bi-hourglass-split me-1"></i> Bekleyen İşlerim
                    </div>
                    <span class="badge bg-primary">Toplam: @totalPending</span>
                </div>

                <div class="card-body p-2">
                    <div class="list-group list-group-flush">

                        <div class="fw-semibold small text-muted mb-2">
                            <i class="bi bi-folder me-1"></i> Doküman İşlemleri
                        </div>

                        <a asp-action="Index" asp-route-tab="read"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center small @(activeTab=="read"?"active":"")">
                            Okunması Gerekenler
                            <span class="badge bg-secondary">@pendingReadCount</span>
                        </a>

                        <a asp-action="Index" asp-route-tab="approval"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center small @(activeTab=="approval"?"active":"")">
                            Onay Bekleyenler
                            <span class="badge bg-warning text-dark">@pendingApprovalCount</span>
                        </a>

                        <a asp-action="Index" asp-route-tab="revisions"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center small @(activeTab=="revisions"?"active":"")">
                            Üzerimdeki Revizyonlar
                            <span class="badge bg-danger">@pendingRevisionsCount</span>
                        </a>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm h-100">

                <div class="card-header d-flex justify-content-between align-items-center py-2">
                    <div class="fw-semibold">
                        @if (activeTab == "approval")
                        {
                            <span><i class="bi bi-check2-circle me-1"></i> Onay Bekleyen Dokümanlar</span>
                        }
                        else if (activeTab == "revisions")
                        {
                            <span><i class="bi bi-arrow-repeat me-1"></i> Üzerimdeki Revizyonlar</span>
                        }
                        else
                        {
                            <span><i class="bi bi-eye me-1"></i> Okunması Gereken Dokümanlar</span>
                        }
                    </div>

                    <input type="text"
                           class="form-control form-control-sm w-50"
                           placeholder="Ara..."
                           id="q"
                           onkeyup="filterTable()" />
                </div>

                <div class="card-body p-2">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle mb-0" id="tbl">
                            <thead class="table-light">
                                <tr class="small">
                                    <th></th>
                                    <th>Kod</th>
                                    <th>Ad</th>
                                    <th>Kategori / Sahip</th>
                                    <th class="text-end">Bilgi</th>
                                </tr>
                            </thead>

                            <tbody class="small">

                                @if (activeTab == "approval")
                                {
                                    if (pendingApprovals?.Any() == true)
                                    {
                                        foreach (var d in pendingApprovals)
                                        {
                                            <tr onclick="location.href='@Url.Action("Detail","Approval",new{id=d.Id})'" style="cursor:pointer">
                                                <td><span class="badge bg-warning">●</span></td>
                                                <td class="fw-semibold">@d.DocumentCode</td>
                                                <td>@d.Title</td>
                                                <td>@d.CreatedByName</td>
                                                <td class="text-end">@d.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="text-center text-muted">Kayıt yok</td></tr>
                                    }
                                }

                                else if (activeTab == "revisions")
                                {
                                    if (pendingRevisions?.Any() == true)
                                    {
                                        foreach (var r in pendingRevisions)
                                        {
                                            <tr onclick="location.href='@Url.Action("RevisionCreate","Document",new{documentId=r.DocumentId})'" style="cursor:pointer">
                                                <td><span class="badge bg-danger">●</span></td>
                                                <td class="fw-semibold">@r.DocumentCode</td>
                                                <td>@r.DocumentTitle</td>
                                                <td>@r.CategoryName</td>
                                                <td class="text-end">@r.CurrentVersion → @r.NewVersionNumber</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="5" class="text-center text-muted">Aktif revizyon yok</td></tr>
                                    }
                                }

                                else
                                {
                                    <tr><td colspan="5" class="text-center text-muted">Okuma kaydı yok</td></tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer small text-muted">
                    Toplam: @(activeTab == "approval" ? pendingApprovalCount :
                    activeTab == "revisions" ? pendingRevisionsCount :
                    pendingReadCount)
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        function filterTable() {
            const q = document.getElementById('q').value.toLowerCase();
            document.querySelectorAll('#tbl tbody tr').forEach(r => {
                r.style.display = r.innerText.toLowerCase().includes(q) ? '' : 'none';
            });
        }
    </script>
}

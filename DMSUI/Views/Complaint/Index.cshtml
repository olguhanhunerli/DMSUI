@using DMSUI.Entities.DTOs.Common
@using DMSUI.Entities.DTOs.Complaints
@model PagedResultDTO<ComplaintItemsDTO>

@{
    ViewData["Title"] = "Şikayet Listesi";

    var arama = Context.Request.Query["q"].ToString();
    var durum = Context.Request.Query["status"].ToString();
    var tekrarMi = Context.Request.Query["isRepeat"].ToString();
    var dofVarMi = Context.Request.Query["needsCapa"].ToString();

    var sayfaBoyutuStr = Context.Request.Query["pageSize"].ToString();
    var sayfaBoyutu = Model?.PageSize ?? 10;
    if (int.TryParse(sayfaBoyutuStr, out var ps) && ps > 0) { sayfaBoyutu = ps; }

    string OnemMetni(int id) => id switch
    {
        1 => "Düşük",
        2 => "Orta",
        3 => "Yüksek",
        4 => "Kritik",
        _ => "?"
    };

    string OnemRozeti(int id) => id switch
    {
        1 => "bg-light text-dark",
        2 => "bg-info",
        3 => "bg-warning",
        4 => "bg-danger",
        _ => "bg-secondary"
    };

    string DurumRozeti(string? st)
    {
        var s = (st ?? "").Trim();
        if (s.Equals("AÇIK", StringComparison.OrdinalIgnoreCase)) return "bg-danger";
        if (s.Equals("GÜNCELLENDİ", StringComparison.OrdinalIgnoreCase)) return "bg-warning";
        if (s.Equals("KAPALI", StringComparison.OrdinalIgnoreCase)) return "bg-success";
        return "bg-secondary";
    }
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Şikayetler</h4>

    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Yeni Şikayet
    </a>
</div>

<form method="get" class="card shadow-sm mb-3" id="filterForm">
    <div class="card-body">
        <div class="row g-2 align-items-end">

            <div class="col-12 col-md-5">
                <label class="form-label small text-muted mb-1">Arama</label>
                <input id="fQ"
                       type="text"
                       name="q"
                       value="@arama"
                       class="form-control form-control-sm"
                       placeholder="Şikayet No / Firma / Müşteri / Başlık / Parça / Lot / Atanan" />
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted mb-1">Durum</label>
                <select id="fStatus" name="status" class="form-select form-select-sm">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(durum))">Tümü</option>
                    <option value="AÇIK" selected="@(durum == "AÇIK")">AÇIK</option>
                    <option value="GÜNCELLENDİ" selected="@(durum == "GÜNCELLENDİ")">GÜNCELLENDİ</option>
                    <option value="KAPALI" selected="@(durum == "KAPALI")">KAPALI</option>
                </select>
            </div>

            <div class="col-6 col-md-2">
                <label class="form-label small text-muted mb-1">Tekrar?</label>
                <select id="fIsRepeat" name="isRepeat" class="form-select form-select-sm">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(tekrarMi))">Tümü</option>
                    <option value="true" selected="@(tekrarMi == "true")">Evet</option>
                    <option value="false" selected="@(tekrarMi == "false")">Hayır</option>
                </select>
            </div>

            <div class="col-6 col-md-2">
                <label class="form-label small text-muted mb-1">DÖF Kaydı</label>
                <select id="fNeedsCapa" name="needsCapa" class="form-select form-select-sm">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(dofVarMi))">Tümü</option>
                    <option value="true" selected="@(dofVarMi == "true")">Evet</option>
                    <option value="false" selected="@(dofVarMi == "false")">Hayır</option>
                </select>
            </div>

            <div class="col-6 col-md-1">
                <label class="form-label small text-muted mb-1">Sayfa</label>
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(sayfaBoyutu == 10)">10</option>
                    <option value="25" selected="@(sayfaBoyutu == 25)">25</option>
                    <option value="50" selected="@(sayfaBoyutu == 50)">50</option>
                </select>
            </div>

            <div class="col-6 col-md-12 col-lg-2 d-grid">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="bi bi-search me-1"></i> Ara
                </button>
            </div>

        </div>
    </div>
</form>

<a class="btn btn-success btn-sm"
   asp-action="ExportExcel"
   asp-route-page="@Model.Page"
   asp-route-pageSize="@sayfaBoyutu"
   asp-route-q="@arama"
   asp-route-status="@durum"
   asp-route-isRepeat="@tekrarMi"
   asp-route-needsCapa="@dofVarMi">
    <i class="bi bi-file-earmark-excel me-1"></i> Excel Aktar
</a>

<div class="card shadow-sm mt-2">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr class="small">
                    <th style="width:48px;">#</th>
                    <th style="width:140px;">Şikayet No</th>
                    <th style="width:160px;">Müşteri</th>
                    <th>Başlık</th>
                    <th style="width:110px;" class="text-center">Önem</th>
                    <th style="width:120px;" class="text-center">Durum</th>
                    <th style="width:90px;" class="text-center">Tekrar?</th>
                    <th style="width:90px;" class="text-center">DÖF Oluşturulsun Mu?</th>
                    <th style="width:150px;">Tarih</th>
                    <th style="width:120px;" class="text-center">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items != null && Model.Items.Any())
                {
                    var siraNo = (Model.Page - 1) * Model.PageSize;

                    foreach (var item in Model.Items)
                    {
                        siraNo++;

                        var st = (item.status ?? "").ToString();
                        var stBadge = DurumRozeti(st);

                        var onemText = OnemMetni(item.severityId);
                        var onemBadge = OnemRozeti(item.severityId);

                        var aramaMetni = $"{item.complaintNo} {item.companyName} {item.customerName} {item.title} {item.assignees} {item.status} {item.partNumber} {item.lotNumber} {item.customerComplaintNo}";

                        <tr data-q="@aramaMetni"
                            data-status="@st"
                            data-isrepeat="@(item.isRepeat ? "true" : "false")"
                            data-needscapa="@(item.needsCapa ? "true" : "false")">

                            <td class="text-muted">@siraNo</td>

                            <td>
                                <div class="fw-semibold">@item.complaintNo</div>
                            </td>

                            <td class="fw-semibold">@item.customerName</td>

                            <td>
                                <div class="fw-semibold">@item.title</div>
                            </td>

                            <td class="text-center">
                                <span class="badge @onemBadge">@onemText</span>
                            </td>

                            <td class="text-center">
                                <span class="badge @stBadge">@item.status</span>
                            </td>

                            <td class="text-center">
                                <span class="badge @(item.isRepeat ? "bg-info" : "bg-light text-dark")">
                                    @(item.isRepeat ? "Evet" : "Hayır")
                                </span>
                            </td>

                            <td class="text-center">
                                <span class="badge @(item.needsCapa ? "bg-primary" : "bg-light text-dark")">
                                    @(item.needsCapa ? "Evet" : "Hayır")
                                </span>
                            </td>

                            <td class="text-muted">
                                @((item.reportedAt != default ? item.reportedAt : (item.createdAt ?? DateTime.MinValue)).ToString("dd.MM.yyyy HH:mm"))
                            </td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-secondary"
                                       title="Detay"
                                       asp-action="Details"
                                       asp-route-complaintNo="@item.complaintNo">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a class="btn btn-outline-dark btn-sm"
                                       title="PDF"
                                       asp-action="Pdf"
                                       asp-route-complaintNo="@item.complaintNo">
                                        <i class="bi bi-filetype-pdf me-1"></i>
                                    </a>

                                    @if (item.isClosed != true)
                                    {
                                        <form asp-action="Close"
                                              asp-route-complaintNo="@item.complaintNo"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Şikayeti kapatmak istediğine emin misin?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-outline-danger btn-sm"
                                                    title="Şikayeti Kapat">
                                                <i class="bi bi-lock-fill me-1"></i>
                                            </button>
                                        </form>

                                        <a class="btn btn-outline-primary"
                                           title="Düzenle"
                                           asp-action="Edit"
                                           asp-route-complaintNo="@item.complaintNo">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="text-center text-muted py-4">Kayıt bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <div class="text-muted small">
            Toplam: <strong>@Model.TotalCount</strong>
            • Sayfa: <strong>@Model.Page</strong> / <strong>@Model.TotalPages</strong>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    @{
                        int mevcut = Model.Page;
                        int toplam = Model.TotalPages;

                        int bas = Math.Max(1, mevcut - 2);
                        int bit = Math.Min(toplam, mevcut + 2);
                    }

                    <li class="page-item @(mevcut == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(mevcut - 1)"
                           asp-route-pageSize="@sayfaBoyutu"
                           asp-route-q="@arama"
                           asp-route-status="@durum"
                           asp-route-isRepeat="@tekrarMi"
                           asp-route-needsCapa="@dofVarMi">
                            ‹
                        </a>
                    </li>

                    @for (int i = bas; i <= bit; i++)
                    {
                        <li class="page-item @(i == mevcut ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-pageSize="@sayfaBoyutu"
                               asp-route-q="@arama"
                               asp-route-status="@durum"
                               asp-route-isRepeat="@tekrarMi"
                               asp-route-needsCapa="@dofVarMi">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(mevcut == toplam ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(mevcut + 1)"
                           asp-route-pageSize="@sayfaBoyutu"
                           asp-route-q="@arama"
                           asp-route-status="@durum"
                           asp-route-isRepeat="@tekrarMi"
                           asp-route-needsCapa="@dofVarMi">
                            ›
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<script>
    (function () {
        const form = document.getElementById('filterForm');
        if (!form) return;

        const q = document.getElementById('fQ');
        const status = document.getElementById('fStatus');
        const isRepeat = document.getElementById('fIsRepeat');
        const needsCapa = document.getElementById('fNeedsCapa');

        function norm(v) {
            return (v || '').toString().trim().toLowerCase();
        }

        function apply() {
            const qv = norm(q?.value);
            const sv = norm(status?.value);
            const rv = norm(isRepeat?.value);
            const cv = norm(needsCapa?.value);

            const rows = document.querySelectorAll('tbody tr[data-status]');

            rows.forEach(tr => {
                const trQ = norm(tr.dataset.q);
                const trS = norm(tr.dataset.status);
                const trR = norm(tr.dataset.isrepeat);
                const trC = norm(tr.dataset.needscapa);

                const okQ = !qv || trQ.includes(qv);
                const okS = !sv || trS === sv;
                const okR = !rv || trR === rv;
                const okC = !cv || trC === cv;

                tr.style.display = (okQ && okS && okR && okC) ? '' : 'none';
            });
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            apply();
        });

        [q, status, isRepeat, needsCapa].forEach(el => {
            if (!el) return;
            el.addEventListener('input', apply);
            el.addEventListener('change', apply);
        });

        apply();
    })();
</script>

@using DMSUI.Entities.DTOs.Document
@model List<MyPendingDocumentDTO>

@{
    ViewData["Title"] = "Onayımda Bekleyen Dokümanlar";
    int page = ViewBag.Page;
    int pageSize = ViewBag.PageSize;
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">
            <i class="bi bi-hourglass-split"></i>
            Onayımda Bekleyen Dokümanlar
        </h4>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
            Şu anda onayında bekleyen bir doküman bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:5%">#</th>
                            <th style="width:20%">Doküman Kodu</th>
                            <th>Başlık</th>
                            <th style="width:15%">Durum</th>
                            <th style="width:20%">Oluşturma</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var d = Model[i];
                            <tr>
                                <td>@((page - 1) * pageSize + i + 1)</td>
                                <td>@d.DocumentCode</td>
                                <td>@d.Title</td>
                                <td>
                                    @if (d.StatusId == 1)
                                    {
                                        <span class="badge bg-warning text-dark">Bekliyor</span>
                                    }
                                    else if (d.StatusId == 2)
                                    {
                                        <span class="badge bg-success">Onaylandı</span>
                                    }
                                    else if (d.StatusId == 3)
                                    {
                                        <span class="badge bg-danger">Reddedildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Bilinmiyor</span>
                                    }
                                </td>
                                <td>@d.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a class="btn btn-outline-secondary @(page == 1 ? "disabled" : "")"
               asp-action="MyPending"
               asp-route-page="@(page - 1)"
               asp-route-pageSize="@pageSize">
                ◀ Önceki
            </a>

            <a class="btn btn-outline-secondary"
               asp-action="MyPending"
               asp-route-page="@(page + 1)"
               asp-route-pageSize="@pageSize">
                Sonraki ▶
            </a>
        </div>
    }
</div>

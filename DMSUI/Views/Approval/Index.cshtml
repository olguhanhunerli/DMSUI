@using DMSUI.Entities.DTOs.Document
@model List<MyPendingDocumentDTO>

@{
    ViewData["Title"] = "Onayımda Bekleyen Dokümanlar";
    int page = ViewBag.Page;
    int pageSize = ViewBag.PageSize;
}

<div class="container mt-4">

    <h4 class="mb-3">
        <i class="bi bi-hourglass-split"></i>
        Onayımda Bekleyen Dokümanlar
    </h4>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Onayınızda bekleyen doküman yok
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:5%">#</th>
                            <th style="width:20%">Doküman Kodu</th>
                            <th>Başlık</th>
                            <th style="width:15%">Durum</th>
                            <th style="width:20%">Oluşturma</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var d = Model[i];
                            <tr>
                                <td>@((page - 1) * pageSize + i + 1)</td>
                                <td>
                                    <a asp-controller="Approval"
                                       asp-action="Detail"
                                       asp-route-id="@d.Id"
                                       class="fw-semibold text-decoration-none">
                                        @d.DocumentCode
                                    </a>
                                </td>
                                <td>@d.Title</td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        @d.StatusName
                                    </span>
                                </td>
                                <td>@d.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>ID: @d.Id</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

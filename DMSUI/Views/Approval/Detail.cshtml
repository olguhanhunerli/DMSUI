@model DMSUI.Entities.DTOs.Document.DocumentDetailDTO
@using DMSUI.Extensions

@{
    ViewData["Title"] = "Doküman Detayı";

    var currentUserId = User.GetUserId();
    bool canApprove = Model.CurrentApproverId == currentUserId;
}

<div class="container-fluid px-4 mt-4">

    <!-- HEADER -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center gap-3">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                     style="width:48px;height:48px;">
                    <i class="bi bi-file-earmark-text fs-4"></i>
                </div>

                <div>
                    <h5 class="fw-bold mb-0">@Model.DocumentCode</h5>
                    <small class="text-muted">@Model.Title</small>
                </div>
            </div>

            <span class="badge rounded-pill px-3 py-2 fs-6
                @(Model.StatusId == 1 ? "bg-warning text-dark" :
                                    Model.StatusId == 2 ? "bg-success" :
                                    Model.StatusId == 3 ? "bg-danger" :
                                    "bg-secondary")">
                @Model.Status
            </span>

        </div>
    </div>

    <!-- MAIN CARD -->
    <div class="card border-0 shadow-sm">

        <!-- TABS -->
        <div class="card-header bg-white border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs">

                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-info">
                        <i class="bi bi-info-circle"></i> Bilgiler
                    </button>
                </li>

                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-access">
                        <i class="bi bi-shield-lock"></i> Erişim
                    </button>
                </li>

                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-pdf">
                        <i class="bi bi-file-pdf"></i> PDF
                    </button>
                </li>

                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-attachments">
                        <i class="bi bi-paperclip"></i> Ekler
                        @if (Model.Attachments?.Any() == true)
                        {
                            <span class="badge bg-secondary ms-1">@Model.Attachments.Count</span>
                        }
                    </button>
                </li>

                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-approval">
                        <i class="bi bi-check2-circle"></i> Onay
                    </button>
                </li>

                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-history">
                        <i class="bi bi-clock-history"></i> Geçmiş
                    </button>
                </li>

            </ul>
        </div>

        <!-- TAB CONTENT -->
        <div class="card-body">
            <div class="tab-content">

                <!-- INFO -->
                <div class="tab-pane fade show active" id="tab-info">
                    <div class="row g-3">

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Doküman Tipi</small>
                                <div class="fw-semibold">@Model.DocumentType</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Versiyon</small>
                                <div class="fw-semibold">@Model.VersionNumber</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Oluşturan</small>
                                <div class="fw-semibold">@Model.CreatedByName</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <small class="text-muted">Tarih</small>
                                <div class="fw-semibold">
                                    @Model.CreatedAt?.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="border rounded p-3">
                                <small class="text-muted">Versiyon Notu</small>
                                <div>
                                    @(string.IsNullOrWhiteSpace(Model.VersionNote)
                                                                        ? "-"
                                                                        : Model.VersionNote)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- ACCESS -->
                <div class="tab-pane fade" id="tab-access">
                    <div class="row g-3 mt-3">

                        <div class="col-md-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="fw-semibold mb-2">Departmanlar</h6>
                                @if (Model.AllowedDepartments?.Any() == true)
                                {
                                    foreach (var d in Model.AllowedDepartments)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" checked disabled type="checkbox" />
                                            <label class="form-check-label">@d.Name</label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <small class="text-muted">Kısıtlama yok</small>
                                }
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="fw-semibold mb-2">Roller</h6>
                                @if (Model.AllowedRoles?.Any() == true)
                                {
                                    foreach (var r in Model.AllowedRoles)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" checked disabled type="checkbox" />
                                            <label class="form-check-label">@r.Name</label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <small class="text-muted">Kısıtlama yok</small>
                                }
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="border rounded p-3 h-100">
                                <h6 class="fw-semibold mb-2">Kullanıcılar</h6>
                                @if (Model.AllowedUsers?.Any() == true)
                                {
                                    foreach (var u in Model.AllowedUsers)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" checked disabled type="checkbox" />
                                            <label class="form-check-label">@u.FullName</label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <small class="text-muted">Kısıtlama yok</small>
                                }
                            </div>
                        </div>

                    </div>
                </div>

                <!-- PDF -->
                <div class="tab-pane fade" id="tab-pdf">
                    <div class="ratio ratio-16x9 border rounded">
                        <iframe src="@Url.Action("Pdf", "Document", new { id = Model.Id })"></iframe>
                    </div>
                </div>

                <!-- ATTACHMENTS -->
                <div class="tab-pane fade" id="tab-attachments">
                    @if (Model.Attachments?.Any() == true)
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Dosya</th>
                                    <th>Yükleyen</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var f in Model.Attachments)
                                {
                                    <tr>
                                        <td>@f.OriginalFileName</td>
                                        <td>@f.UploadedByName</td>
                                        <td>@f.UploadedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-muted">Ek bulunmuyor.</div>
                    }
                </div>

                <!-- APPROVAL -->
                <div class="tab-pane fade" id="tab-approval">

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <small class="text-muted">Onay Durumu</small>
                                <div class="fw-semibold fs-5">@Model.Status</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <small class="text-muted">Bekleyen Onaycı</small>
                                <div class="fw-semibold">
                                    @(Model.StatusId == 1 ? Model.CurrentApproverName : "—")
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (canApprove && Model.StatusId == 1)
                    {
                        <div class="border rounded p-3 bg-light mb-3">

                            <form asp-action="Approve" method="post" class="d-inline">
                                <input type="hidden" name="documentId" value="@Model.Id" />
                                <button class="btn btn-success">
                                    <i class="bi bi-check2-circle"></i> Onayla
                                </button>
                            </form>

                            <button class="btn btn-outline-danger ms-2"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#rejectBox">
                                <i class="bi bi-x-circle"></i> Reddet
                            </button>

                            <div id="rejectBox" class="collapse mt-3">
                                <form asp-action="Reject" method="post">
                                    <input type="hidden" name="documentId" value="@Model.Id" />
                                    <textarea name="reason"
                                          class="form-control mb-2"
                                          rows="3"
                                          required
                                          placeholder="Red gerekçesi"></textarea>
                                    <button class="btn btn-danger">Gönder</button>
                                </form>
                            </div>

                        </div>
                    }

                </div>

                <!-- HISTORY (TIMELINE BOOTSTRAP ONLY) -->
                <div class="tab-pane fade" id="tab-history">

                    @if (Model.ApprovalHistories?.Any() == true)
                    {
                        <div class="list-group list-group-flush">

                            @foreach (var h in Model.ApprovalHistories
                                                    .OrderByDescending(x => x.ActionAt))
                            {
                                var badgeClass =
                                h.ActionType == "Onaylandı" ? "bg-success" :
                                h.ActionType == "Reddedildi" ? "bg-danger" :
                                h.ActionType == "Revizyon" ? "bg-warning text-dark" :
                                "bg-secondary";

                                <div class="list-group-item border-0 ps-0">
                                    <div class="d-flex">

                                        <div class="d-flex flex-column align-items-center me-3">
                                            <span class="rounded-circle @badgeClass"
                                                  style="width:12px;height:12px;"></span>
                                            <div class="flex-grow-1 border-start mt-1"></div>
                                        </div>

                                        <div class="flex-grow-1 pb-4">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge @badgeClass">
                                                    @h.ActionDisplayName
                                                </span>

                                                <small class="text-muted">
                                                    @h.ActionByName •
                                                    @h.ActionAt?.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </div>

                                            @if (!string.IsNullOrWhiteSpace(h.ActionNote))
                                            {
                                                <div class="fst-italic text-muted mt-1">
                                                    “@h.ActionNote”
                                                </div>
                                            }
                                        </div>

                                    </div>
                                </div>
                            }

                        </div>
                    }
                    else
                    {
                        <div class="text-muted">Geçmiş kaydı yok.</div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>

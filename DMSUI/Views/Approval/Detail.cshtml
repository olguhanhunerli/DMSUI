@model DocumentDetailDTO
@using DMSUI.Entities.DTOs.Document
@using DMSUI.Extensions

@{
    ViewData["Title"] = "Doküman Detayı";
    var currentUserId = User.GetUserId();
    bool canApprove = Model.CurrentApproverId == currentUserId;
}

<div class="container-fluid px-4 mt-4">

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center gap-3">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                     style="width:48px;height:48px;">
                    <i class="bi bi-file-earmark-text fs-4"></i>
                </div>

                <div>
                    <h5 class="fw-bold mb-0">@Model.DocumentCode</h5>
                    <small class="text-muted">@Model.Title</small>
                </div>
            </div>

            <span class="badge rounded-pill px-3 py-2 fs-6
                @(Model.StatusId == 1 ? "bg-warning text-dark" :
                  Model.StatusId == 2 ? "bg-success" :
                  Model.StatusId == 3 ? "bg-danger" : "bg-secondary")">
                @Model.Status
            </span>

        </div>
    </div>

    <div class="card border-0 shadow-sm">

        <div class="card-header bg-white border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-info">
                        <i class="bi bi-info-circle"></i> Bilgiler
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-pdf">
                        <i class="bi bi-file-pdf"></i> PDF
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-attachments">
                        <i class="bi bi-paperclip"></i> Ekler
                        @if (Model.Attachments?.Any() == true)
                        {
                            <span class="badge bg-secondary ms-1">@Model.Attachments.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-approval">
                        <i class="bi bi-check2-circle"></i> Onay
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-history">
                        <i class="bi bi-clock-history"></i> Geçmiş
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-logs">
                        <i class="bi bi-activity"></i> Loglar
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">

                <div class="tab-pane fade show active" id="tab-info">
                    <div class="row g-3 mb-3">

                        <div class="col-md-3">
                            <div class="border rounded p-3 h-100">
                                <small class="text-muted">Doküman Tipi</small>
                                <div class="fw-semibold">@Model.DocumentType</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3 h-100">
                                <small class="text-muted">Versiyon</small>
                                <div class="fw-semibold">@Model.VersionNumber</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3 h-100">
                                <small class="text-muted">Oluşturan</small>
                                <div class="fw-semibold">@Model.CreatedByName</div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="border rounded p-3 h-100">
                                <small class="text-muted">Tarih</small>
                                <div class="fw-semibold">
                                    @Model.CreatedAt?.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="border rounded p-3">
                                <small class="text-muted">Versiyon Notu</small>
                                <div>
                                    @(string.IsNullOrWhiteSpace(Model.VersionNote) ? "-" : Model.VersionNote)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="border rounded p-3 d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-file-earmark-pdf text-danger fs-4"></i>
                            <div>
                                <div class="fw-semibold">@Model.MainFile?.OriginalFileName</div>
                                <small class="text-muted">
                                    @(Model.MainFile?.FileSize / 1024) KB
                                </small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-controller="Document"
                               asp-action="Pdf"
                               asp-route-id="@Model.Id"
                               target="_blank"
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Görüntüle
                            </a>
                            <a asp-controller="Document"
                               asp-action="DownloadPdf"
                               asp-route-id="@Model.Id"
                               class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-file-earmark-pdf"></i> PDF
                            </a>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-pdf">
                    <div class="ratio ratio-16x9 border rounded">
                        <iframe src="@Url.Action("Pdf","Document",new{id=Model.Id})"></iframe>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab-attachments">
                    @if (Model.Attachments?.Any() == true)
                    {
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Dosya</th>
                                    <th>Yükleyen</th>
                                    <th>Tarih</th>
                                    <th class="text-end"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var file in Model.Attachments)
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-paperclip"></i>
                                            @file.OriginalFileName
                                        </td>
                                        <td>@file.UploadedByName</td>
                                        <td>@file.UploadedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-primary"
                                               href="@Url.Action("DownloadAttachment","Document",new{id=file.Id})">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-muted">Ek dosya bulunmuyor.</div>
                    }
                </div>

                <!-- APPROVAL TAB -->
                <div class="tab-pane fade" id="tab-approval">

                    @if (Model.StatusId == 1)
                    {
                        <div class="alert alert-warning d-flex align-items-center gap-2">
                            <i class="bi bi-hourglass-split fs-4"></i>
                            <div>
                                <div class="fw-semibold">Bekleyen Onaycı</div>
                                <div>@Model.CurrentApproverName</div>
                            </div>
                        </div>
                    }

                    @if (canApprove && Model.StatusId == 1)
                    {
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="documentId" value="@Model.Id" />
                            <button class="btn btn-success btn-lg">
                                <i class="bi bi-check2-circle"></i> Onayla
                            </button>
                        </form>

                        <button class="btn btn-danger btn-lg ms-2"
                                data-bs-toggle="collapse"
                                data-bs-target="#rejectBox">
                            <i class="bi bi-x-circle"></i> Reddet
                        </button>

                        <div id="rejectBox" class="collapse mt-3">
                            <form asp-action="Reject" method="post">
                                <input type="hidden" name="documentId" value="@Model.Id" />
                                <textarea name="reason"
                                          class="form-control mb-2"
                                          rows="3"
                                          required
                                          placeholder="Red gerekçesi"></textarea>
                                <button class="btn btn-danger">Gönder</button>
                            </form>
                        </div>
                    }
                </div>

                <!-- HISTORY -->
                <div class="tab-pane fade" id="tab-history">
                    <ul class="list-group list-group-flush">
                        @foreach (var h in Model.ApprovalHistories ?? [])
                        {
                            <li class="list-group-item">
                                <strong>@h.ActionType</strong> - @h.ActionByName
                                <br />
                                <small class="text-muted">
                                    @h.ActionAt?.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            </li>
                        }
                    </ul>
                </div>

                <!-- LOGS -->
                <div class="tab-pane fade" id="tab-logs">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>İşlem</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.AccessLogs ?? [])
                            {
                                <tr>
                                    <td>@log.UserName</td>
                                    <td>@log.AccessType</td>
                                    <td>@log.AccessAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

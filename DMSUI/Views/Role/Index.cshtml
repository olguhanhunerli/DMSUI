@using DMSUI.Entities.DTOs.Role
@model List<RoleListDTO>

@{
    ViewData["Title"] = "Roller";
}

<div class="container-fluid px-3 pb-4">

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-shield-lock me-2 text-primary"></i>
            Roller
        </h4>

        <a asp-action="Create"
           class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Rol
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-2">

            <div class="table-scroll-x">
                <table class="table table-hover align-middle mb-0 small w-100">
                    <thead class="table-light text-nowrap">
                        <tr>
                            <th class="px-3">#</th>
                            <th class="px-3">Rol Adı</th>
                            <th class="px-3">Açıklama</th>
                            <th class="px-3">Oluşturan</th>
                            <th class="px-3">Güncelleyen</th>
                            <th class="px-3 text-end">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="text-nowrap">
                        @{
                            int rowNo = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        }

                        @if (Model != null && Model.Any())
                        {
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td class="px-3">@rowNo</td>

                                    <td class="fw-semibold px-3">
                                        <span class="badge bg-secondary">
                                            @role.Name
                                        </span>
                                    </td>

                                    <td class="px-3">
                                        @role.Description
                                    </td>

                                    <td class="px-3">
                                        @(role.CreatedByUser ?? "-")
                                    </td>

                                    <td class="px-3">
                                        @(role.UploadedByUser ?? "-")
                                    </td>

                                    <td class="px-3 text-end">
                                        <div class="btn-group btn-group-sm shadow-sm">

                                            <a asp-action="Edit"
                                               asp-route-id="@role.Id"
                                               class="btn btn-light border"
                                               title="Düzenle">
                                                <i class="bi bi-pencil-square text-primary"></i>
                                            </a>

                                            <form asp-action="Delete"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@role.Id" />

                                                <button type="submit"
                                                        onclick="return confirm('Bu rol silinsin mi?')"
                                                        class="btn btn-light border"
                                                        title="Sil">
                                                    <i class="bi bi-trash text-danger"></i>
                                                </button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>

                                rowNo++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Kayıt bulunamadı.
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <nav class="mt-3">
        <ul class="pagination pagination-sm justify-content-end">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@ViewBag.PageSize">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

</div>

@using Microsoft.AspNetCore.Mvc.Rendering
@using DMSUI.Entities.DTOs.Common
@using DMSUI.Entities.DTOs.Customers
@model PagedResultDTO<CustomersItemDTO>

@{
    ViewData["Title"] = "Müşteriler";

    var q = Context.Request.Query["q"].ToString();
    var companyId = Context.Request.Query["companyId"].ToString();
    var isDelete = Context.Request.Query["isDelete"].ToString();

    var pageSize = Model?.PageSize ?? 10;

    var companies = ViewBag.Companies as List<SelectListItem> ?? new();
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">Müşteriler</h4>

    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Yeni Müşteri
    </a>
</div>

<form method="get" class="card shadow-sm mb-3" id="filterForm">
    <div class="card-body">
        <div class="row g-2 align-items-end">

            <div class="col-12 col-md-4">
                <label class="form-label small text-muted mb-1">Arama</label>
                <input id="fQ"
                       type="text"
                       name="q"
                       value="@q"
                       class="form-control form-control-sm"
                       placeholder="Kod / Ad / Telefon / Email" />
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label small text-muted mb-1">Şirket</label>
                <select id="fCompanyId" name="companyId" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    @foreach (var c in companies)
                    {
                        <option value="@c.Value" selected="@(c.Value == companyId)">@c.Text</option>
                    }
                </select>
            </div>

            <div class="col-6 col-md-2">
                <label class="form-label small text-muted mb-1">Durum</label>
                <select id="fIsDelete" name="isDelete" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    <option value="false" selected="@(isDelete == "false")">Aktif</option>
                    <option value="true" selected="@(isDelete == "true")">Silinmiş</option>
                </select>
            </div>

            <div class="col-6 col-md-1">
                <label class="form-label small text-muted mb-1">Sayfa</label>
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="25" selected="@(pageSize == 25)">25</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                </select>
            </div>

            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="bi bi-search me-1"></i> Ara
                </button>
            </div>

        </div>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr class="small">
                    <th style="width:48px;">#</th>
                    <th>Şirket</th>
                    <th>Kod</th>
                    <th>Ad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Oluşturma</th>
                    <th style="width:120px;" class="text-center">Durum</th>
                    <th style="width:120px;" class="text-center">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model?.Items != null && Model.Items.Any())
                {
                    var row = (Model.Page - 1) * Model.PageSize;

                    foreach (var item in Model.Items)
                    {
                        row++;

                        var statusBadge = (item.isDelete == true) ? "bg-danger" : "bg-success";
                        var statusText = (item.isDelete == true) ? "Silinmiş" : "Aktif";

                        <tr class="@(item.isDelete == true ? "table-secondary" : "")"
                            data-q="@($"{item.customerCode} {item.name} {item.phone} {item.email}")"
                            data-companyid="@item.companyId"
                            data-isdelete="@(item.isDelete == true ? "true" : "false")">

                            <td class="text-muted">@row</td>

                            <td>
                                <div class="fw-semibold">@item.companyName</div>
                            </td>

                            <td class="fw-semibold">@item.customerCode</td>
                            <td>@item.name</td>
                            <td>@item.phone</td>
                            <td>@item.email</td>

                            <td>
                                @(item.createdAt?.ToString("dd.MM.yyyy HH:mm"))
                                @if (item.isDelete == true)
                                {
                                    <div class="text-muted small mt-1">
                                        Silen: @(item.deletedByName ?? "-")<br />
                                        Silme: @(item.deleteAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")
                                    </div>
                                }
                            </td>

                            <td class="text-center">
                                <span class="badge @statusBadge">@statusText</span>
                            </td>

                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-secondary" title="Detay" asp-action="Detail" asp-route-id="@item.id">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a class="btn btn-outline-primary" title="Düzenle" asp-action="Edit" asp-route-id="@item.id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form asp-action="Delete" method="post" asp-route-id="@item.id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="isDelete" value="@( !(item.isDelete == true) )" />

                                        <button type="submit"
                                                class="btn @(item.isDelete == true ? "btn-outline-success" : "btn-outline-danger")"
                                                title="@(item.isDelete == true ? "Geri Al" : "Sil")"
                                                onclick="return confirm('@(item.isDelete == true ? "Kayıt geri alınsın mı?" : "Silmek istediğine emin misin?")');">
                                            <i class="bi @(item.isDelete == true ? "bi-arrow-counterclockwise" : "bi-trash")"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">Kayıt bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white d-flex align-items-center justify-content-between">
        <div class="text-muted small">
            Toplam: <strong>@Model.TotalCount</strong>
            • Sayfa: <strong>@Model.Page</strong> / <strong>@Model.TotalPages</strong>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    @{
                        int current = Model.Page;
                        int total = Model.TotalPages;

                        int start = Math.Max(1, current - 2);
                        int end = Math.Min(total, current + 2);
                    }

                    <li class="page-item @(current == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(current - 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-companyId="@companyId"
                           asp-route-isDelete="@isDelete">
                            ‹
                        </a>
                    </li>

                    @for (int i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == current ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-pageSize="@pageSize"
                               asp-route-q="@q"
                               asp-route-companyId="@companyId"
                               asp-route-isDelete="@isDelete">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(current == total ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(current + 1)"
                           asp-route-pageSize="@pageSize"
                           asp-route-q="@q"
                           asp-route-companyId="@companyId"
                           asp-route-isDelete="@isDelete">
                            ›
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<script>
    (function () {
        const form = document.getElementById('filterForm');
        if (!form) return;

        const q = document.getElementById('fQ');
        const companyId = document.getElementById('fCompanyId');
        const isDelete = document.getElementById('fIsDelete');

        function norm(v) {
            return (v || '').toString().trim().toLowerCase();
        }

        function apply() {
            const qv = norm(q?.value);
            const civ = norm(companyId?.value);
            const dv = norm(isDelete?.value);

            const rows = document.querySelectorAll('tbody tr[data-companyid]');

            rows.forEach(tr => {
                const trQ = norm(tr.dataset.q);
                const trCompanyId = norm(tr.dataset.companyid);
                const trIsDelete = norm(tr.dataset.isdelete);

                const okQ = !qv || trQ.includes(qv);
                const okC = !civ || trCompanyId === civ;
                const okD = !dv || trIsDelete === dv;

                tr.style.display = (okQ && okC && okD) ? '' : 'none';
            });
        }

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            apply();
        });

        [q, companyId, isDelete].forEach(el => {
            if (!el) return;
            el.addEventListener('input', apply);
            el.addEventListener('change', apply);
        });

        apply();
    })();
</script>

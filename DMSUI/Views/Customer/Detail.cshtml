@using DMSUI.Entities.DTOs.Customers
@model CustomersItemDTO

@{
    ViewData["Title"] = "Müşteri Detay";
    var statusBadge = Model?.isDelete == true ? "bg-danger" : "bg-success";
    var statusText = Model?.isDelete == true ? "Silinmiş" : "Aktif";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h4 class="mb-0">Müşteri Detay</h4>
        <div class="text-muted small">
            ID: <strong>@Model?.id</strong>
            • Kod: <strong>@(Model?.customerCode ?? "-")</strong>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index">
            <i class="bi bi-arrow-left me-1"></i> Listeye Dön
        </a>

        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.id">
            <i class="bi bi-pencil-square me-1"></i> Düzenle
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex align-items-center justify-content-between">
                <div class="fw-semibold">Genel Bilgiler</div>
                <span class="badge @statusBadge">@statusText</span>
            </div>

            <div class="card-body">
                <div class="row g-3">

                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted mb-1">Müşteri Kodu</label>
                        <input class="form-control form-control-sm" value="@(Model?.customerCode ?? "-")" readonly />
                    </div>

                    <div class="col-12 col-md-8">
                        <label class="form-label small text-muted mb-1">Müşteri Adı</label>
                        <input class="form-control form-control-sm" value="@(Model?.name ?? "-")" readonly />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted mb-1">Telefon</label>
                        <input class="form-control form-control-sm" value="@(Model?.phone ?? "-")" readonly />
                    </div>

                    <div class="col-12 col-md-8">
                        <label class="form-label small text-muted mb-1">Email</label>
                        <input class="form-control form-control-sm" value="@(Model?.email ?? "-")" readonly />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted mb-1">Şirket ID</label>
                        <input class="form-control form-control-sm" value="@(Model?.companyId.ToString() ?? "-")" readonly />
                    </div>

                    <div class="col-12 col-md-8">
                        <label class="form-label small text-muted mb-1">Şirket</label>
                        <input class="form-control form-control-sm" value="@(Model?.companyName ?? "-")" readonly />
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white">
                <div class="fw-semibold">Kayıt Bilgileri</div>
            </div>

            <div class="card-body">
                <div class="mb-3">
                    <div class="text-muted small">Oluşturulma</div>
                    <div class="fw-semibold">
                        @(Model?.createdAt.ToString("dd.MM.yyyy HH:mm") ?? "-")
                    </div>
                </div>

                <div class="mb-3">
                    <div class="text-muted small">Silinme Tarihi</div>
                    <div class="fw-semibold">
                        @(Model?.deleteAt.ToString("dd.MM.yyyy HH:mm") ?? "-")
                    </div>
                </div>

                <div class="mb-0">
                    <div class="text-muted small">Silen Kullanıcı</div>
                    <div class="fw-semibold">
                        @(Model?.deletedByName ?? "-")
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <div class="fw-semibold">Hızlı İşlemler</div>
            </div>

            <div class="card-body d-grid gap-2">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index">
                    <i class="bi bi-list-ul me-1"></i> Listeye Git
                </a>

                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.id">
                    <i class="bi bi-pencil-square me-1"></i> Düzenle
                </a>

                <form asp-action="ToggleDelete" method="post" asp-route-id="@Model?.id">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="isDelete" value="@(Model?.isDelete == true ? "false" : "true")" />

                    <button type="submit"
                            class="btn btn-sm @(Model?.isDelete == true ? "btn-outline-success" : "btn-outline-danger")"
                            onclick="return confirm('@(Model?.isDelete == true ? "Kayıt geri alınsın mı?" : "Silmek istediğine emin misin?")');">
                        <i class="bi @(Model?.isDelete == true ? "bi-arrow-counterclockwise" : "bi-trash") me-1"></i>
                        @(Model?.isDelete == true ? "Geri Al" : "Sil")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

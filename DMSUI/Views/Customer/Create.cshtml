@using DMSUI.ViewModels.Customer
@model CreateCustomerVM

<h3>➕ Yeni Müşteri Oluştur</h3>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row">
        <div class="col-md-6">
            <label>Müşteri Kodu</label>
            <input asp-for="customerCode" class="form-control" />
            <span asp-validation-for="customerCode" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label>Müşteri Adı</label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <div class="row mt-3">
        <div class="col-md-6">
            <label>Telefon</label>
            <input asp-for="phone" class="form-control" />
            <span asp-validation-for="phone" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label>Email</label>
            <input asp-for="email" class="form-control" type="email" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">↩️ Vazgeç</a>
        <button type="submit" class="btn btn-success ms-2">✅ Oluştur</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@using DMSUI.ViewModels.Customer
@model CreateCustomerVM

@{
    ViewData["Title"] = "Yeni Müşteri Oluştur";
}

<div class="container-fluid px-3 pb-4">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-person-plus me-2 text-primary"></i>
            Yeni Müşteri Oluştur
        </h4>

        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <form asp-action="Create" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="row g-3">

                <div class="col-12 col-md-6">
                    <label class="form-label">Müşteri Kodu</label>
                    <input asp-for="customerCode"
                           class="form-control"
                           placeholder="Örn: CUST001" />
                    <span asp-validation-for="customerCode" class="text-danger small"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label">Müşteri Adı</label>
                    <input asp-for="name"
                           class="form-control"
                           placeholder="Örn: ABC Otomotiv" />
                    <span asp-validation-for="name" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <hr class="my-1" />
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label">Telefon</label>
                    <input asp-for="phone"
                           class="form-control"
                           placeholder="Örn: +90 5xx xxx xx xx" />
                    <span asp-validation-for="phone" class="text-danger small"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label">E-posta</label>
                    <input asp-for="email"
                           class="form-control"
                           type="email"
                           placeholder="Örn: info@firma.com" />
                    <span asp-validation-for="email" class="text-danger small"></span>
                </div>

            </div>
        </div>

        <div class="card-footer bg-white d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                Vazgeç
            </a>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle me-1"></i> Oluştur
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

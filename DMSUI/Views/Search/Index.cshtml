@using DMSUI.Entities.DTOs.Search
@model GlobalSearchResultDTO

@{
    ViewData["Title"] = "Arama Sonuçları";

    var dokumanlar = Model.Documents;
    int sayfa = dokumanlar.Page;
    int toplamSayfa = dokumanlar.TotalPages;
    int toplamKayit = dokumanlar.TotalCount;
}

<div class="container mt-4">

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-search"></i> Arama Sonuçları
        </div>

        <div class="card-body">

            @if (Model.Categories.Any())
            {
                <h6 class="fw-bold mb-2">Kategoriler</h6>

                <ul class="list-group mb-4">
                    @foreach (var kategori in Model.Categories)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-folder"></i>
                                <strong>@kategori.Name</strong>
                                @if (!string.IsNullOrWhiteSpace(kategori.Code))
                                {
                                    <span class="text-muted ms-1">(@kategori.Code)</span>
                                }
                            </div>

                            <a asp-controller="Document"
                               asp-action="Index"
                               asp-route-categoryId="@kategori.Id"
                               class="btn btn-sm btn-outline-primary">
                                Aç
                            </a>
                        </li>
                    }
                </ul>
            }

            <h6 class="fw-bold mb-2">Dokümanlar</h6>

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Kod</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                    </tr>
                </thead>
                <tbody>

                    @if (dokumanlar.Items.Any())
                    {
                        foreach (var dokuman in dokumanlar.Items)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    <a asp-controller="Document"
                                       asp-action="Detail"
                                       asp-route-id="@dokuman.Id"
                                       class="text-decoration-none">
                                        @dokuman.DocumentCode
                                    </a>
                                </td>
                                <td>@dokuman.Title</td>
                                <td>@dokuman.CategoryPath</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                Sonuç bulunamadı.
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

        @if (toplamSayfa > 1)
        {
            <div class="card-footer bg-white d-flex justify-content-between align-items-center">

                <small class="text-muted">
                    Toplam <strong>@toplamKayit</strong> kayıt ·
                    Sayfa <strong>@sayfa</strong> / <strong>@toplamSayfa</strong>
                </small>

                <nav>
                    <ul class="pagination pagination-sm mb-0">

                        <li class="page-item @(sayfa == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(sayfa - 1)">‹</a>
                        </li>

                        @for (int i = 1; i <= toplamSayfa; i++)
                        {
                            <li class="page-item @(i == sayfa ? "active" : "")">
                                <a class="page-link" asp-route-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(sayfa == toplamSayfa ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(sayfa + 1)">›</a>
                        </li>

                    </ul>
                </nav>

            </div>
        }

    </div>
</div>
